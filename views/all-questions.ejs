<style>
    .question-container {
        background: rgba(255, 255, 255, 0.3);
        margin-bottom: 30px;
        border-radius: 15px;
    }
    .question-category {
        border-bottom: groove 2px lightskyblue;
        margin-bottom: 30px;
    }
    .question-category p {
        padding: 10px;
        padding-bottom: 0;
        color: lightskyblue;
        font-weight: bolder;
    }
    .question {
        padding: 15px;
    }
    .question-stats {
    }
    .question-resolved {
        padding: 2px;
    }
    .question-resolved p {
        color: rgba(255, 255, 255, 0.74);
        padding: 5px;
    }
    .question-page {
        padding: 16px;
        width: 100%;
        text-align: center;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        margin-bottom: 20px;
    }
    .question-page a {
        background: #fff;
        color: #000;
        padding: 8px;
        border-radius: 8px;
        text-align: center;
        margin-bottom: 10px;
        width: 200px;
    }
    .post-answer h5 {
        text-align: center;
        padding: 10px;
    }
    .post-answer textarea {
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        padding: 5px;
    }
    .post-answer input {
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        padding: 5px;
    }
    .post-answer button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        outline: none;
        color: #fff;
        margin-top: 20px;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }
</style>
<%- include('partials/mainHeaderSiteMenu') %>
<%- include('partials/mainHeaderPageMenu') %>
<h1>All Questions</h1>

<% allQuestions.forEach(function(question) { %>
    <div class="question-container">
        <div class="question">
            <h5><%= question.question_body %></h5>
        </div>
        <div class="question-category">
            <p>Category: <%= question.category %></p>
        </div>
        <div class="question-author">
        </div>
        <div class="question-stats">
            <div class="question-resolved">
                <% if (question.resolved == true) { %>
                    <p style="text-shadow: 0 0 3px green;">This question is resolved.</p>
                <% } else { %>
                    <p style="text-shadow: 0 0 3px red;">This question hasn't been resolved yet.</p>
                <% } %>
            </div>
        </div>
        <div class="question-page">
            <a href="/academy/question/<%= question.id %>">See More</a>
        </div>
        <div class="post-answer">
            <h5>Do you know the answer?</h5>
            <form action="/academy/question/<%= question.id %>/answer" method="post">
                <textarea name="answer_body" id="answerBody" placeholder="Answer..."></textarea>
                <input type="url" name="resources" id="resources" placeholder="Add a resource URL...">
                <button type="submit" class="answer-button">Answer</button>
            </form>
        </div>
    </div>
<% }) %>