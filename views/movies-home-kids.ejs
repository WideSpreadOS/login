<style>
    .spread-break hr {
        background: lightskyblue;
        box-shadow: 0 0 4px 2px rgba(255, 255, 255, 0.534);
        width: 80%;
        margin-left: 10%;
        border-radius: 50%;
        margin-top: 40px;
        margin-bottom: 30px;
    }
    .movie-search {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding: 10px;
        padding-bottom: 0;
        width: 100%;
    }
    .movie-search input {
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        outline: none;
        border: none;
        padding: 5px;
    }
    .movie-search button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        margin-bottom: 0;
        color: #fff;
        margin-top: 10px;
        border-top-left-radius: 8px;  
        border-top-right-radius: 8px;  
    }
    .user-movies h3 {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
    }
    .user-movies h5 {
        text-align: center;
    }
    .recommended-movies {
        display: inline-flex;
        overflow-x: scroll;
        max-height: 300px;
        height: 300px;
        width: 100%;
        max-width: 100%;
        margin-top: 5px;
        border-radius: 8px;
        border-left: groove 1px lightskyblue;
        border-right: groove 1px lightskyblue;
        padding: 5px;
    }
    .movie {
        max-height: 290px;
        position: relative;
        width: 200px;
        min-width: 200px;
        max-width: 200px;
        margin-right: 10px;
    }
    .movie a {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    .movie-background {
        position: absolute;
        z-index: -30;
        top: 0;
        left: 0;
        height: 290px;
    }
    .movie-background img {
        height: 290px;
        border-radius: 8px;
        width: 100%;
    }
    .movie-title {
        background: rgba(255, 255, 255, 0.3);
        border-bottom: groove 2px lightskyblue;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        width: 200px;
        padding: 10px;
    }
    .movie-title h5 {
        margin-bottom: 0;
        text-align: center;
    }
    .movie-rating {
        position: absolute;
        bottom: 0;
        right: 0;
        background: rgba(255, 255, 255, 0.3);
        width: 50px;
        border-top-left-radius: 8px;
        border-bottom-right-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-left: groove 2px lightskyblue;
    }
    .movie-rating p {
        color: #fff;
        text-align: center;
        padding: 10px;
        margin-bottom: 0;
    }
</style>
<h1 style="text-align: center;">Movies</h1>
<div class="movie-search">
    <form action="/entertainment/movies/search" method="POST">
        <input type="text" name="movie" id="movie" placeholder="Search for movies...">
        <button type="submit">Search</button>
    </form>
</div>

<div class="spread-break">
    <hr>
</div>

<h5 style="text-align: center; padding: 10px; margin-top: 30px;">Recommended Movies</h5>
<div class="recommended-movies">
    <% movies.forEach(function(movie) { %>
        <div class="movie">
                <a href="/entertainment/movies/<%= movie.link %>">
                <div class="movie-background">
                    <img src="<%= movie.poster %>" alt="">
                </div>
                <div class="movie-title">
                    <h5><%= movie.name %></h5>
                </div>
                <div class="movie-rating">
                    <p><%= movie.rated %></p>
                </div>
            </a>
            </div>
    <% }) %>
</div>

<div class="spread-break">
    <hr>
</div>

<h5 style="text-align: center; padding: 10px; margin-top: 30px;">Comedy</h5>
<div class="recommended-movies">
    <% comedies.forEach(function(movie) { %>
        <div class="movie">
                <a href="/entertainment/movies/<%= movie.link %>">
                <div class="movie-background">
                    <img src="<%= movie.poster %>" alt="">
                </div>
                <div class="movie-title">
                    <h5><%= movie.name %></h5>
                </div>
                <div class="movie-rating">
                    <p><%= movie.rated %></p>
                </div>
            </a>
            </div>
    <% }) %>
</div>

