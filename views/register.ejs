
<div class="row mt-5" style="padding-top: 70px;">
    <div class="col-md-6 m-auto">

      <div class="nav-bar-outer"  style="opacity: 1.0;">
        <div class="nav-bar nav-bar-ws" style="padding: 15px; padding-left: 0;">
          <div class="login-background">
            <div class="login-background-image">
            </div>
            </div>
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
        <%- include ('./partials/messages') %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name"> First Name</label>
            <input
              type="name"
              id="fname"
              name="fname"
              class="form-control login-input"
              placeholder="Enter First Name"
              value="<%= typeof name != 'undefined' ? fname : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="name"> Last Name</label>
            <input
              type="name"
              id="lname"
              name="lname"
              class="form-control login-input"
              placeholder="Enter Last Name"
              value="<%= typeof name != 'undefined' ? lname : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control login-input"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control login-input"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control login-input"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block login-button">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
      </div>
        </div>
      </div>
    </div>
  </div>