      color: #fff;
    }
    .create-account-btns {
      background: transparent;
      width: 80%;
      margin-left: 10%;
    }
    .create-account-btns h1 {
      margin-bottom: 30px;
    }
    .login-input {
      box-shadow: none;
      background: rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(2px);
      box-shadow: none;
      color: #fff;
    }
    .login-input:focus {
      color: #fff;
      background: rgba(255, 255, 255, 0.5);
      backdrop-filter: blur(2px);
    }
    .login-button {
      box-shadow: none;
      background: rgba(0, 128, 0, 0.3);
      border-top: groove 2px green;
      border-bottom: groove 2px green;
    }
