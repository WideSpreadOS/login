</div>
  <div class="row mt-5">
    <div class="create-account" style="margin-top: 45px;">
        <div class="text-center">
            <div class="create-account-btns">
              <h1>
          <i class="fas fa-user-plus"></i> Register
        </h1>
        <%- include ('./partials/messages') %>
        <form action="/users/register" method="POST">
          <div class="form-container">
          <small>Scroll right to advance to the next input</small>
          <div class="input-scroller" style="display: inline-flex; width: 100%; overflow-x: scroll;">
          <div class="input-group">
            <div class="input-data">

              <label for="name" style="color: #fff"> First Name</label>
              <input
              type="name"
              id="fname"
              name="fname"
              class="input-control login-input"
              placeholder="Enter First Name"
              value="<%= typeof name != 'undefined' ? fname : '' %>"
              />
            </div>
            <div class="next-button">
              <p><i class="fas fa-angle-double-right"></i></p>
            </div>
          </div>
          <div class="input-group">
            <div class="input-data">

              <label for="name" style="color: #fff"> Last Name</label>
              <input
              type="name"
              id="lname"
              name="lname"
              class="input-control login-input"
              placeholder="Enter Last Name"
              value="<%= typeof name != 'undefined' ? lname : '' %>"
              />
            </div>
            <div class="next-button">
              <p><i class="fas fa-angle-double-right"></i></p>
            </div>
          </div>
          <div class="input-group">
            <div class="input-data">

              <label for="email" style="color: #fff">Email</label>
              <input
              type="email"
              id="email"
              name="email"
              class="input-control login-input"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
              />
            </div>
            <div class="next-button">
              <p><i class="fas fa-angle-double-right"></i></p>
            </div>
          </div>
          <div class="input-group">
            <div class="input-data">

              <label for="password" style="color: #fff">Password</label>
              <input
              type="password"
              id="password"
              name="password"
              class="input-control login-input"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
              />
            </div>
            <div class="next-button">
              <p><i class="fas fa-angle-double-right"></i></p>
            </div>
          </div>
          <div class="input-group">
            <div class="input-data">

              <label for="password2" style="color: #fff">Confirm Password</label>
              <input
              type="password"
              id="password2"
              name="password2"
              class="input-control login-input"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              />
            </div>
            <div class="next-button">
              <p><button type="submit"><i style="color: rgba(255, 255, 255, 0.7); text-shadow: 0 0 2px rgba(0, 128, 0, 0.726);" class="fas fa-sign-in-alt"></i></button></p>
            </div>
          </div>
        </div>
        </div>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login" style="color: lightskyblue; background: none; border: none;">Login</a></p>
      </div>
        </div>
      </div>
    </div>
  </div>