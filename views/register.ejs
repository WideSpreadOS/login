<style>
  @media screen and (min-width: 1200px) {
   
    .create-account {
      width: 80%;
      margin-left: 10%;
    }
    .create-account img {
      width: 300px;
      height: 300px;
    }
    .create-account p {
      color: #fff;
    }
    .create-account-btns {
      background: transparent;
      width: 80%;
      margin-left: 10%;
      position: relative;
      z-index: 1999;
    }
    .create-account-btns h1 {
      margin-bottom: 30px;
    }


    .login-input {
      box-shadow: none;
      background: rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(2px);
      box-shadow: none;
      color: #fff;
    }
    .login-input:focus {
      color: #fff;
      background: rgba(255, 255, 255, 0.5);
      backdrop-filter: blur(2px);
    }
    .login-button {
      box-shadow: none;
      background: rgba(0, 128, 0, 0.3);
      border-top: groove 2px green;
      border-bottom: groove 2px green;
    }
    .alert-warning {
      color: #fff;
      background: rgba(255, 0, 0, 0.3);
      border: none;
      border-top: groove 2px red;
      border-bottom: groove 2px red;
      outline: none;
      border-radius: 8px;
    }

  }
  @media screen and (max-width: 1199px) {
    .video-background {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: -9991;
    }
    .video-background video {
      min-height: 100vh;
      width: auto;
    }
    #vidBackground {
      min-width: 100vw;
    }
    .create-account {
      box-shadow: none;
      border-top: outset 2px lightskyblue;
      border-bottom: outset 2px lightskyblue;
      margin-top: 200px;
    }
    .create-account img {
      width: 300px;
      height: 300px;
    }
    .create-account p {
      color: #fff;
    }
    .create-account h1 {
      padding: 20px;
    }
    .create-account-btns {
      background: transparent;
      width: 100%;
      padding: 0;
    }
    .create-account-btns h1 {
      font-size: 1.5rem;
      text-align: center;

    }
    .create-account-btns a {
      border-radius: 8px;
      border-top: groove 2px lightskyblue;
      border-bottom: groove 2px lightskyblue;
      background: rgba(255, 255, 255, 0.3);
      transition: ease-in 0.5s;
    }

    .login-button {
      box-shadow: none;
      background: rgba(0, 128, 0, 0.3);
      border-top: groove 2px green;
      border-bottom: groove 2px green;
    }
    .alert-warning {
      color: #fff;
      background: rgba(255, 0, 0, 0.3);
      border: none;
      border-top: groove 2px red;
      border-bottom: groove 2px red;
      outline: none;
      border-radius: 8px;
    }
    .form-container {
      border-top: outset 2px lightskyblue;
      border-bottom: outset 2px lightskyblue;
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(2px);
      padding-top: 10px;
      padding-bottom: 10px;
    }
    .input-data {
      background: lime;
      width: 90%;
      margin-left: 5%;
      margin-bottom: 5px;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      font-size: 1.2rem;
      padding: 5px;
    }
    .input-data input:focus {
      outline: none;
    }
}
</style>
