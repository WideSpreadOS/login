<style>
    .page-title {
        padding-top: 20px;
        text-align: center;
        width: 100%;
    }
    .main-header-page-menu-container {
        padding: 10px;
        background: rgba(255, 255, 255, 0.308);
        backdrop-filter: blur(2px);
        border-radius: 12px;
        border: groove 1px rgba(135, 206, 250, 0.555);
        
    }
    .main-header-page-menu-inner {
        padding: 10px;
    }
    .main-header-page-menu-inner a {
        display: inline-flex;
        padding: 10px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.733);
        transition: ease-in 0.4s;
        background: rgba(135, 206, 250, 0.315);
        backdrop-filter: blur(4px);
        border-radius: 8px;
        text-align: center;
    }
    .main-header-page-menu-inner a:hover {
        text-decoration: none;
        color: #fff;
        text-shadow: 0 0 3px lightskyblue;
        transition: ease-in 0.2s;
    }

    @media screen and (max-width: 500px) {
        .main-header-page-menu-container {
            width: 100%;
            padding-left: 0;
            padding-right: 0;
            box-shadow: inset 0 0 4px black;
        }
        .main-header-page-menu-container p {
            margin: 0 auto;
            color: rgba(255, 255, 255, 0.76);
            text-align: center;
            font-size: 0.6rem;
        }
        .main-header-page-menu-inner a {
            text-align: center;
        }
        
        #mainHeaderPageMenu {
            width: 100%;
            position: relative;

        }

        .main-header-page-menu-inner {
            display: inline-flex;
            max-width: 100%;
            min-width: 100%;
            overflow-x: scroll;
            padding: 10px;
            width: 100%;
        }
        .main-header-page-menu-inner a {
            position: relative;
            padding: 10px;
            width: 150px;
            margin-left: 5px;
            margin-right: 5px;
            margin-bottom: 10px;
            text-align: center;
        }
    }
</style>
<%- include('partials/mainHeaderSiteMenu') %>
<div class="page-title">
    <h1><%= currentPageTitle %></h1>
</div>
<div class="main-header-page-menu-container">
    <div id="mainHeaderPageMenuu">
        <div class="main-header-page-menu-inner">
            <a href="/academy">Your Desk</a>
            <a href="/academy/courses">All Courses</a>

        </div>
    </div>
    <p>Scroll left & right for more options</p>
</div>

<div class="course-selection-container">
<% courses.forEach(function(course){ %>
    <div class="row course-selection">
        <div class="">
        <div class="course-card">
            <h1><%= course.subject %></h1>
            <hr style="border: solid 1px ligthskyblue">
            <h2><%= course.course %></h2>
            <hr>
            <h5>Credits: <%= course.credit_value %></h5>
            <h5>Difficulty: <%= course.difficulty %></h5>
            
        </div>
    </div>
    <div class=""></div>
    <div class="class-selection">
        <div class="course-classes">
            <div class="nav-bar">
                <a href="/academy/courses/<%= course.id %>">See Course</a>
            </div>
            <div class="nav-bar">
                <form action="/academy/courses/<%= course.id %>/add-course?_method=PATCH" method="POST">
                    <input type="text" value="<%= course.id %>" name="courseId" hidden="true">
                    <button type="submit">Add Course</button>
                </form>

            </div>
        </div>
    </div>
</div>
        <% }); %>
</div>