    <style>


@media screen and (max-width: 2699px) {
    .widespread-header {
        width: 85vw;
        height: 85px;
        margin-left: 0;
        position: fixed;
        top: 0px;
        left: 15vw;
    }
    .widespread-header .logo {
        top: 0;
        left: 0;
        width: 100%;
    }
    .logo {
        width: 100%;
        height: 85px;
        border-radius: 0;
        border-bottom: groove 2px lightskyblue;
        box-shadow: 0 8px 8px 2px rgba(0, 0, 0, 0.5);
        background-image: linear-gradient( lightskyblue, lightskyblue,  rgba(135, 206, 250, 0.75),  rgba(135, 206, 250, 0.65), rgba(135, 206, 250, 0.5),  rgba(135, 206, 250, 0.35), rgba(135, 206, 250, 0.25), rgba(135, 206, 250, 0.1), rgba(135, 206, 250, 0.05));
        backdrop-filter: blur(2px);
        position: absolute;
        top: 0;
        left: 0;
    }
    .logo h1 {
        color: rgba(255, 255, 255, 0.5);
    }
    .logo a {
        line-height: 85px;
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.5);
        text-shadow: 0 -2px rgba(0, 0, 0, 0.25);
    }
    .container {
        width: 85vw;
        margin-left: 15vw;
    }
}


@media screen and (max-width: 1199px) {
    .widespread-header {
        width: 100vw;
        height: 85px;
        margin-left: 0;
        position: fixed;
        top: 0px;
        left: 0;
    }
    .logo {
        position: fixed;
        top: 0px;
        left: 0;
        width: 100vw;
        height: 100px;
        border-radius: 0;
        box-shadow: 0 8px 8px 2px rgba(0, 0, 0, 0.5);
        background-image: linear-gradient( lightskyblue, lightskyblue,  rgba(135, 206, 250, 0.75),  rgba(135, 206, 250, 0.65), rgba(135, 206, 250, 0.5),  rgba(135, 206, 250, 0.35), rgba(135, 206, 250, 0.25), rgba(135, 206, 250, 0.1), rgba(135, 206, 250, 0.05));
        backdrop-filter: blur(2px);
    }
    .container {
        width: 100vw;
        margin-left: 0;
    }
    
}

@media screen and (max-width: 500px) {
    .outerThumbContainer {
        position: fixed;
        bottom: 0px;
        right: 25px;
        width: 50px;
        height: 100px;
        border-radius: 50%;
    }
    .widespread-header {
        width: 100vw;
        height: 85px;
        margin-left: 0;
        position: fixed;
        top: 0px;
        left: 0;
    }
    .container {
        width: 100vw;
        margin-left: 0;
        padding-top: 100px;
    }
}

