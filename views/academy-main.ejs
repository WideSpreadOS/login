<style>
    .main-header-page-menu-container {
        padding: 10px;
        background: rgba(255, 255, 255, 0.308);
        backdrop-filter: blur(2px);
        border-radius: 12px;
        border: groove 1px rgba(135, 206, 250, 0.555);
        
    }
    .main-header-page-menu-inner {
        padding: 10px;
    }
    .main-header-page-menu-inner a {
        display: inline-flex;
        padding: 10px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.733);
        transition: ease-in 0.4s;
        background: rgba(135, 206, 250, 0.315);
        backdrop-filter: blur(4px);
        border-radius: 8px;
        text-align: center;
    }
    .main-header-page-menu-inner a:hover {
        text-decoration: none;
        color: #fff;
        text-shadow: 0 0 3px lightskyblue;
        transition: ease-in 0.2s;
    }

    @media screen and (max-width: 1199px) {
        .main-header-page-menu-container {
            width: 100%;
            padding-left: 0;
            padding-right: 0;
            box-shadow: inset 0 0 4px black;
            background: rgba(0, 0, 0, 0.308);
        }
        .main-header-page-menu-container p {
            margin: 0 auto;
            color: rgba(255, 255, 255, 0.76);
            text-align: center;
            font-size: 0.6rem;
            
        }
        .main-header-page-menu-inner a {
            border-top: groove 2px lightskyblue;
            border-bottom: groove 2px lightskyblue;
            text-align: center;
            background: rgba(255, 255, 255, 0.3);
        }
        
        #mainHeaderPageMenu {
            width: 100%;
            position: relative;

        }

        .main-header-page-menu-inner {
            display: inline-flex;
            max-width: 100%;
            min-width: 100%;
            overflow-x: scroll;
            padding: 10px;
            width: 100%;
        }
        .main-header-page-menu-inner a {
            position: relative;
            padding: 10px;
            width: 150px;
            margin-left: 5px;
            margin-right: 5px;
            margin-bottom: 10px;
            text-align: center;
        }
        .course-selection-container {
            box-shadow: none;
            background: transparent;
        }
        .students-current-courses {
            margin-top: 30px;
        }
        .student-course {
            padding: 0;
            border-radius: 8px;
            box-shadow: none;
            overflow: hidden;
            position: relative;
        }
        .course-background-image {
            position: absolute;
            top: 0;
            left: 0;
            z-index: -20;
            width: 100%;
            height: 100%;
            min-width: 100%;
            border-radius: 8px;

        }
        .course-background-image img {
            width: 100%;
        }
        .course-header {
            background:rgba(255, 255, 255, 0.3);
            border-bottom: groove 2px lightskyblue;
            padding: 10px;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }
        .course-stats {
            color: #fff;
            padding: 10px;
        }
        .go-to-course {
            background: rgba(0, 128, 0, 0.5);
            width: 80%;
            margin-left: 10%;
            padding: 8px;
            text-align: center;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            border: groove 2px green;
            box-shadow: inset 0 2px 2px 1px rgba(0, 0, 0, 0.445);
            border-bottom: none;
        }
        .go-to-course p {
            margin-bottom: 5px;

        }
        .go-to-course a {
            color: #fff;
        }
        .academy-footer {
            width: 100%;
        }
        .academy-footer a {
            color: #fff;
        }
        .academy-footer p {
            width: 90%;
            margin-left: 5%;
            border-radius: 8px;;
            padding: 5px;
            border-top: groove 2px lightskyblue;
            border-bottom: groove 2px lightskyblue;
            background:rgba(255, 255, 255, 0.3);
            color: #fff;
            text-align: center;
        }
    }
</style>
<%- include('partials/mainHeaderSiteMenu') %>
<h1><%= currentPageTitle %></h1>
<div class="main-header-page-menu-container">
    <div id="mainHeaderPageMenu">
        <div class="main-header-page-menu-inner">
            <a href="/academy">Your Desk</a>
            <a href="/academy/courses">All Courses</a>

        </div>
    </div>
    <p>Scroll left & right for more options</p>
</div>
<div class="students-current-courses">

    <h1>Your Current Courses</h1>
    <% academyInfo.academy_info.current_courses.forEach(function(course){ %>
        <div class="student-course">
            <div class="course-background-image">
                <img src="/image/<%= course.background_image %>" alt="">
                <% if (course.background_image) { %>
                <% } else { %>
                    <p>NO IMAGE</p>
                <% } %>
            </div>
            <div class="course-header">
                <h2><%= course.course %></h2>
                <h5><%= course.subject %></h5>
            </div>
            <div class="course-stats">
                <p>Difficulty: <%= course.difficulty %></p>
                <p>Credits: <%= course.credit_value %></p>
                <p>Current Grade: <%= course.current_grade %>%</p>
            </div>
            <div class="go-to-course">
                    <p><a href="/academy/courses/<%= course.id %>">Go to Class</a></p>
            </div>
            </div>

    <% }); %>
</div>

<div class="academy-footer">
    <a href="/academy/courses"><p>All Courses</p></a>
    <a href="/academy/add-course"><p>Add New Course</p></a>
</div>