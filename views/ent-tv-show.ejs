<style>

.spread-break hr {
    background: lightskyblue;
    box-shadow: 0 0 4px 2px rgba(255, 255, 255, 0.534);
    width: 80%;
    margin-left: 10%;
    border-radius: 50%;
    margin-top: 40px;
    margin-bottom: 30px;
    }

    
    .show-search {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding: 10px;
        padding-bottom: 0;
        width: 100%;
        margin-bottom: 30px;
    }
    .show-search input {
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        outline: none;
        border: none;
        padding: 5px;
    }
    .show-search button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        margin-bottom: 0;
        color: #fff;
        margin-top: 10px;
        border-top-left-radius: 8px;  
        border-top-right-radius: 8px;  
    }
    h5 {
        text-align: center;
        color: #fff;
    }
    .show-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        min-height: 100%;
        z-index: -80;
    }
    .show-container h3 {
        text-align: center;
        padding: 10px;
    }
    .show-container p {
        color: #fff;
    }
    .show-image img {
        max-width: 100%;
        width: 100%;
        max-height: 100%;
        min-height: 100%;
    }
    .seasons {
        display: inline-flex;
        overflow-x: scroll;
        width: 90%;
        margin-left: 5%;

    }
    .season {
        width: 200px;
        max-width: 200px;
        min-width: 200px;
        height: 300px;
        min-height: 300px;
        max-height: 300px;
        position: relative;
        border-radius: 8px;
        margin-right: 20px;
    }
    .season-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -25;
    }
    .season-image img {
        width: 100%;
        height: 100%;
        border-radius: 8px;
    }
    .season p {
        background: rgba(255, 255, 255, 0.3);
        border-bottom: groove 2px lightskyblue;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        z-index: 10;
        padding: 5px;
        text-align: center;
        color: #fff;
    }
    .add-to-recommended {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 70vw
    }
    .add-to-recommended button {
        background: rgba(0, 128, 0, 0.3);
        border: none;
        outline: none;
        width: 95%;
        border-top-right-radius: 8px;
        border-top: groove 2px green;
        border-right: groove 2px green;
        color: #fff;
        padding: 10px;
    }
</style>

<div class="show-search">
    <form action="/entertainment/tv/search" method="POST">
        <input type="text" name="show" id="show" placeholder="Search for shows...">
        <button type="submit">Search</button>
    </form>
</div>

<div class="show-container">
    <div class="show-image">
        <img src="https://image.tmdb.org/t/p/w500<%= returnedData.poster_path %>" alt="">
    </div>
    <div class="show-title">
        <h3> <%= returnedData.name %></h3>
    </div>
    <p><%= returnedData.overview %></p>
</div>
<h5> <%= returnedData.created_by[0].name %></h5>

<h5>Seasons</h5>
<div class="seasons">
    <% returnedData.seasons.forEach(function(season) { %>
        <a href="/entertainment/tv/<%= showId %>/<%= season.season_number %>">
            <div class="season">
                <div class="season-image">
                    <img src="https://image.tmdb.org/t/p/w500<%= season.poster_path %>" alt="">
                </div>
                <p><%= season.name %></p>
            </div>
        </a>
    <% }) %>
</div>

<div class="add-to-recommended">
    <form action="/entertainment/tv/add-to-recommended" method="post">
        <input type="text" name="name" value="<%= returnedData.name %>" hidden>
        <input type="text" name="link" value="<%= returnedData.id %>" hidden>
        <input type="text" name="poster" value="<%= returnedData.poster_path %>" hidden>
        <button type="submit">Add to WideSpread Collection</button>
    </form>
</div>