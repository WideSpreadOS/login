<style>

    .full-size-image {
        width: 100vw;
        height: 80vh;
        margin-top: 10vh;
    }
    .full-size-image img {
        max-width: 100vw;
        max-height: 80vh;
    }
</style>

    <div class="full-size-image"> 
        <img src="/image/<%= file.filename %>" alt="<%= file.filename %>"> 
    </div> 
<% if ()
    <% audioTracks.forEach(function(track) { %>
        <%= track.audio.data %>
    <audio controls>
        <source src="/files/<%= track.audio.data %>" type="audio/mpeg">
      Your browser does not support the audio element.
      </audio>
    <% }) %>