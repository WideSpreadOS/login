        </div>
        <% if (company.background_image) { %>
            <div class="company-background-image-preview">
                <img src="/image/<%= company.background_image %>" alt="">
            </div>
        <% } else { %>
            <span></span>
        <% } %>
</div>

<div class="subpage-actions">
    
    <a href="/business/<%= company.id %>/add-subpage"><h4>Add Subpages</h4></a>
    <a href="/business/<%= company.id %>/edit-subpage"><h4>Edit Subpages</h4></a>
</div>

