<style>
    .main-header-page-menu-container {
        padding: 10px;
        background: rgba(255, 255, 255, 0.308);
        backdrop-filter: blur(2px);
        border-radius: 12px;
        border: groove 1px rgba(135, 206, 250, 0.555);
        
    }
    .main-header-page-menu-inner {
        padding: 10px;
    }
    .main-header-page-menu-inner a {
        display: inline-flex;
        padding: 10px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.733);
        transition: ease-in 0.4s;
        background: rgba(135, 206, 250, 0.315);
        backdrop-filter: blur(4px);
        border-radius: 8px;
        text-align: center;
    }
    .main-header-page-menu-inner a:hover {
        text-decoration: none;
        color: #fff;
        text-shadow: 0 0 3px lightskyblue;
        transition: ease-in 0.2s;
    }

    @media screen and (max-width: 500px) {
        .main-header-page-menu-container {
            width: 100%;
            padding-left: 0;
            padding-right: 0;
            box-shadow: inset 0 0 4px black;
            border: none;
            border-left: groove 1px lightskyblue;
            border-right: groove 1px lightskyblue;
            background: rgba(0, 0, 0, 0.3);
        }
        .main-header-page-menu-container p {
            color: rgba(255, 255, 255, 0.76);
            text-align: center;
        }
        .main-header-page-menu-inner a {
            text-align: center;
            background: rgba(255, 255, 255, 0.3);
            border-top: groove 2px lightskyblue;
            border-bottom: groove 2px lightskyblue;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.3);
        }
        
        #mainHeaderPageMenu {
            width: 100%;
            position: relative;

        }

        .main-header-page-menu-inner {
            display: inline-flex;
            max-width: 100%;
            min-width: 100%;
            overflow-x: scroll;
            padding: 10px;
            width: 100%;
        }
        .main-header-page-menu-inner a {
            position: relative;
            padding: 10px;
            width: 150px;
            margin-left: 5px;
            margin-right: 5px;
            margin-bottom: 10px;
            text-align: center;
        }
        .company-container-card {
            position: relative;
            background: transparent;
            border-radius: 15px;
            box-shadow: none;
            margin-bottom: 20px;
        }
        .background-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -20;
            text-align: center;
        }
        .background-image img {
            width: 100%;
            height: 100%;
            border-radius: 15px;
            max-height: fit-content;
            max-width: fit-content;

        }
        .company-header {
            background: rgba(255, 255, 255, 0.3);
            border-bottom: groove 2px lightskyblue;
            padding: 10px;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            display: inline-flex;
            width: 100%;
        }
        .company-name {
            width: 70%;
        }
        .company-logo {
            width: 30%;
        }
        .company-logo img {
            max-width: 100%;
            border-radius: 8px;
        }
        .company-bio {
            box-shadow: none;
            margin-top: 10px;
            padding: 10px;
        }
        .company-bio p {
            color: #fff;
        }
        .company-contact {
            background: rgba(255, 255, 255, 0.3);
            border-top: groove 2px lightskyblue;
            border-radius: 0;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
        }
        .company-contact p {
            color: #fff;
        }
        .company-contact a {
            color: #fff;
        }
        .business-footer {
            width: 100%;
        }
        .business-footer p {
            width: 100%;
            text-align: center;
            padding: 10px;
            border-top: groove 2px lightskyblue;
            border-bottom: groove 2px lightskyblue;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.3);
        }
        .business-footer a {
            color: #fff;
        }
    }
</style>
<%- include('partials/mainHeaderSiteMenu') %>
<h1 style="text-align: center;"><%= currentPageTitle %></h1>
<div class="main-header-page-menu-container">
    <div id="mainHeaderPageMenuu">
        <div class="main-header-page-menu-inner">
            <p><a href="/business/your-desk">Your Desk</a></p>
            <p><a href="/news/business">Business News</a></p>
        </div>
    </div>
    <p><small style="color: lightskyblue;">Scroll left & right for more options</small></p>
</div>
<h1 style="text-align: center; margin-top: 50px; margin-bottom: 50px;">Business</h1>



<% companies.forEach(function(company){ %>
    <div class="company-container-card">
        <div class="background-image">
            <% if (company.background_image) { %>
                    <img src="/image/<%= company.background_image %>" alt="">
            <% } else { %>
                <span style="display: none;"></span>
            <% } %>
        </div>
        <div class="company-header">
            <div class="company-name">
                <a style="text-decoration: none;" href="/business/<%= company._id %>">
                    <h2><%= company.company_name %></h2>
                    <h5><%= company.company_type %></h5>
                </a>
            </div>
            <div class="company-logo">
                <% if (company.logo) { %>
                        <img src="/image/<%= company.logo %>" alt="">
                <% } else { %>
                    <span style="display: none;"></span>
                <% } %>
            </div>
        </div>
        
        <div class="company-bio">
            <p><%= company.company_bio %></p>
        </div>
        <hr>
        <div class="company-contact">
            <p><i class="fas fa-phone"></i><a href="tel:<%= company.company_phone %>"><%= company.company_phone %></a></p>
            <p><i class="far fa-envelope"></i><a href="mailto:<%= company.company_main_email %>"><%= company.company_main_email %></a></p>
        </div>
    </div>
<% }); %>



<div class="business-footer">
    <p><a href="/business/add-new-business">Add New Business</a></p>
</div>