<%- include('partials/mainHeaderSiteMenu') %>
<h1 style="text-align: center;"><%= currentPageTitle %></h1>
<div class="main-header-page-menu-container">
    <div id="mainHeaderPageMenuu">
        <div class="main-header-page-menu-inner">
            <p><a href="/business/your-desk">Your Desk</a></p>
            <p><a href="/news/business">Business News</a></p>
        </div>
    </div>
    <p><small style="color: lightskyblue;">Scroll left & right for more options</small></p>
</div>
<h1 style="text-align: center; margin-top: 50px; margin-bottom: 50px;">Business</h1>


<div class= "companies-container">
<% companies.forEach(function(company){ %>
    <div class="company-container-card">
        <div class="background-image">
            <% if (company.background_image) { %>
                    <img src="/image/<%= company.background_image %>" alt="">
            <% } else { %>
                <span style="display: none;"></span>
            <% } %>
        </div>
        <div class="company-header">
            <div class="company-name">
                <a href="/business/<%= company.id %>">
                    <h2><%= company.company_name %></h2>
                    <h5><%= company.company_type %></h5>
                </a>
            </div>
            <div class="company-logo">
                <% if (company.logo) { %>
                        <img src="/image/<%= company.logo %>" alt="">
                <% } else { %>
                    <span style="display: none;"></span>
                <% } %>
            </div>
        </div>
        
        <div class="company-bio">
            <p><%= company.company_bio %></p>
        </div>
        <hr>
        <div class="company-contact">
            <p><i class="fas fa-phone"></i><a href="tel:<%= company.company_phone %>"><%= company.company_phone %></a></p>
            <p><i class="far fa-envelope"></i><a href="mailto:<%= company.company_main_email %>"><%= company.company_main_email %></a></p>
        </div>
    </div>
<% }); %>
</div>


<div class="business-footer">
    <p><a href="/business/add-new-business">Add New Business</a></p>
</div>