<style>
    .main-header-page-menu-container {
        padding: 10px;
        background: rgba(255, 255, 255, 0.308);
        backdrop-filter: blur(2px);
        border-radius: 12px;
        border: groove 1px rgba(135, 206, 250, 0.555);
        
    }
    .main-header-page-menu-inner {
        padding: 10px;
    }
    .main-header-page-menu-inner a {
        display: inline-flex;
        padding: 10px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.733);
        transition: ease-in 0.4s;
        background: rgba(135, 206, 250, 0.315);
        backdrop-filter: blur(4px);
        border-radius: 8px;
    }
    .main-header-page-menu-inner a:hover {
        text-decoration: none;
        color: #fff;
        text-shadow: 0 0 3px lightskyblue;
        transition: ease-in 0.2s;
    }

    @media screen and (max-width: 500px) {
        .main-header-page-menu-container {
            width: 100%;
            padding-left: 0;
            padding-right: 0;
            box-shadow: inset 0 0 4px black;
        }
        .main-header-page-menu-container p {
            margin: 0 auto;
            color: rgba(255, 255, 255, 0.76);
            text-align: center;
            font-size: 0.6rem;
        }
        
        #mainHeaderPageMenu {
            width: 100%;
            position: relative;

        }

        .main-header-page-menu-inner {
            display: inline-flex;
            max-width: 100%;
            min-width: 100%;
            overflow-x: scroll;
            padding: 10px;
            width: 100%;
        }
        .main-header-page-menu-inner a {
            position: relative;
            padding: 10px;
            width: 150px;
            margin-left: 5px;
            margin-right: 5px;
            margin-bottom: 10px;
        }
        .article {
            position: relative;
            width: 100%;
            height: 450px;
            margin-top: 20px;
        }
        .article-image {
            position: absolute;
            z-index: 80;
            text-align: center;
            width: 100%;
            height: 100%;
        }
        .article-image img {
            border-radius: 12px;
            max-width: 100%;
        }
        .article-info {
            position: absolute;
            z-index: 81;
            top: 125px;
            width: 100%;
            text-align: center;
            background: rgba(0, 0, 0, 0.253);
            backdrop-filter: blur(2px);
        }
        .article-info small {
            color: lightskyblue;
        }
    }
</style>
<div class="main-header-page-menu-container">
    <div id="mainHeaderPageMenuu">
        <div class="main-header-page-menu-inner">
            <a href="/news/local">Local</a>
            <a href="/news/national">National</a>
            <a href="/news/international">International</a>
            <a href="/news/business">Business</a>
            <a href="/news/health">Health</a>
            <a href="/news/technology">Technology</a>
            <a href="/news/politics">Politics</a>
            <a href="/news/newsmax">Newsmax</a>
            <a href="/news/events">Events</a>
        </div>
    </div>
    <p>Scroll left & right for more options</p>
</div>

<div class="news-outlet-container">
<h1>News</h1>
</div>
<div class="news-articles">

    <% results.forEach(function(article){ %>
        <div class="article">
            <div class="">
                <div class="article-image">
                    <img src="<%= article.articleImage %>" alt="<%= article.articleImageAlt %>">
                </div>
            </div>
            <div class=""></div>
            <div class="">
                <div class="article-info">
                    <small><%= article.time %></small>
                    <a href="https://www.foxnews.com/<%= article.link %>" target="_blank"><h5><%= article.title %></h5> </a>
                    <p><%= article.newsPreview %></p>
                </div>
            </div>
        </div>
        
        <% }); %>
    </div>



