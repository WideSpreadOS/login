                    <div class="note">
                        <div class="note-header">
                            <h6><%= note.noteTitle %></h6>
                            <p><small><%= note.noteCreated.toLocaleTimeString() %> - <%= note.noteCreated.toLocaleDateString() %></small></p>
                        </div>
                        <div class="note-body">
                            <p><%= note.noteBody %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="add-note">
                <form action="/notebooks/note/new/<%= notebook.id %>" method="post">
