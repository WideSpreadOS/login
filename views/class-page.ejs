<div class="create-learning-point">
    <h3>Create a Learning Point</h3>

    <form action="/academy/<%= thisClass.id %>/add-learning-point" method="post" class="add-form">
        <input type="text" hidden="true" value="<%=thisClass.id %>" name="class">
    <input type="text" name="section_header" id="section_header" placeholder="Section Header">
    <h5>Body</h5>
    <textarea name="section_body" id="section_body" rows="10"></textarea>
    <h5>Notes</h5>
    <textarea name="section_notes" id="section_notes" rows="10"></textarea>
    <input type="number" name="difficulty" id="difficulty" placeholder="Difficulty (1-3)">
    <input type="text" value="<%= thisCourseId %>" name="courseId">
    <button type="submit">Add Learning Point</button>
</form>
</div>
</div>



<div class="add-quiz nav-bar">
    <button>Create Quiz</button>

    <form action="/academy/<%= thisCourseId %>/<%= thisClass.id %>/add-quiz" method="post" class="add-form">
        <input type="text" name="classId" value="<%= thisClass.id %>">
        <input type="text" name="courseId" value="<%= thisCourseId %>">
        <select name="forLearningPoint" id="forLearningPoint">
            <% learningPoints.forEach(function(point){ %>
                <option value="<%= point.id %>"><%= point.section_header%> - <%= point.id %></option>
            <% })%>
        </select>
        <input type="text" name="question1" id="question1" placeholder="Question 1">
        <input type="text" name="answer1" id="answer1" placeholder="Answer 1">
        <input type="number" name="difficulty1" id="difficulty1" placeholder="Difficulty (1-3)">
        <input type="text" name="question2" id="question2" placeholder="Question 2">
        <input type="text" name="answer2" id="answer2" placeholder="Answer 2">
        <input type="number" name="difficulty2" id="difficulty2" placeholder="Difficulty (1-3)">
        <input type="text" name="question3" id="question3" placeholder="Question 3">
        <input type="text" name="answer3" id="answer3" placeholder="Answer 3">
        <input type="number" name="difficulty3" id="difficulty3" placeholder="Difficulty (1-3)">
        <button type="submit"><i class="fas fa-plus"></i>  Add Quiz</button>
    </form>
</div>



<script>
    var coll = document.getElementsByClassName("collapsible-learning-point");
    var i;
    
    for (i = 0; i < coll.length; i++) {
      coll[i].addEventListener("click", function() {
        this.classList.toggle("active");
        var content = this.nextElementSibling;
        if (content.style.display === "block") {
          content.style.display = "none";
        } else {
          content.style.display = "block";
        }
      });
    }
    </script>


