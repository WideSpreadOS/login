    <div class="create-flashcard">
        <h3>Create a Flashcard</h3>
<form action="/academy/<%= thisCourseId %>/<%= thisClass.id %>/add-flashcard" method="post" class="add-form">
    <input type="text" name="question" id="flashcardQuestion" placeholder="Question">
    <input type="text" name="answer" id="flashcardAnswer" placeholder="Answer">
        <input type="text" name="difficulty" id="flashcardDifficulty" placeholder="Difficulty (1-3)">
        <button type="submit">Add Flashcard</button>
