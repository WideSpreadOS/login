<div class="page-title">
    <h1>Update Your Profile</h1>
</div>
<div class="row">
<div class="update-profile col-12">

    <h3>Change Your Background Image</h3>
    <div class="user-profile-image-form">
        <form action="/upload-background-image?_method=PATCH" method="post" enctype="multipart/form-data">
            <div class="custom-file-background-image">
                <input type="file" name="user_background_image" id="userBackgroundImage">
                <label for="userProfileImage" class="custom-file-label-choose-background-image"></label>
            </div>
            <div class="custom-file-background-image-button">
                <div>
                    <button type="submit" class="custom-file-profile-image-button">Change</button>
                </div>
            </div>
        </form>
    </div>
    <div class="current-image-background" style="z-index: 100;">
        <% if (currentUser.user_background_image) { %>
            <img src="/image/<%= currentUser.user_background_image %>" alt="<%= currentUser.fname %> <%= currentUser.lname %>'s Background Image">
            <%} else { %>
                <div class="user-background-color" style="width: 100px; height: 100px; background: <%= currentUser.favColor1 %>"></div>
                <% } %>
            </div>
    <h3>Change Your VR Background Image</h3>
    <h3><small>Images must be equirectangular images - <a href="https://en.wikipedia.org/wiki/Equirectangular_projection" target="_blank">Learn More</a></small></h3>
    <div class="user-profile-image-form">
        <form action="/upload-vr-background-image?_method=PATCH" method="post" enctype="multipart/form-data">
            <div class="custom-file-background-image">
                <input type="file" name="user_vr_background_image" id="userVRBackgroundImage">
                <label for="userVRProfileImage" class="custom-file-label-choose-background-image"></label>
            </div>
            <div class="custom-file-background-image-button">
                <div>
                    <button type="submit" class="custom-file-profile-image-button">Change</button>
                </div>
            </div>
        </form>
    </div>
    <div class="current-image-background" style="z-index: 101;">
        <% if (currentUser.user_vr_background_image) { %>
            <img src="/image/<%= currentUser.user_vr_background_image %>" alt="<%= currentUser.fname %> <%= currentUser.lname %>'s Background Image">
            <%} else { %>
                <div class="user-background-color" style="width: 100px; height: 100px; background: <%= currentUser.favColor1 %>"></div>
                <% } %>
            </div>

    <form action="/users/new-vr-image-url" method="post">
        <input type="url" name="url" placeholder="Enter Image URL">
        <input type="text" name="image_name" placeholder="Image Name">
        <button type="submit">Add</button>
    </form>
    <div class="vr-backgrounds-container">
        <% vrOptions.forEach(function(background) { %>
            <iframe frameborder="0" id="<%= background.image_preview %>" src="https://ws-equi-images.herokuapp.com/apartment_1a.html">
            </iframe>
    <% }) %>
    </div>
    <hr style="border-color: rgba(135, 206, 250, 0.623); margin-top: 40px; margin-bottom: 40px; width: 80%; margin-left: 10%;">
