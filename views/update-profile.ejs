<script>
    function setSelectIndex(s, v) {
        for(let i = 0; i < s.options.length; i++) {
            if( s.options[i].text == v) {
                s.options[i] = true;
                return;
            }
        }
    }
    setSelectIndex(document.getElementById("state"), "<%= currentUser.state %>")
</script>


