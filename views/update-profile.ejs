<style>
        .user-profile-image-form {
        max-width: 85vw;
        margin-left: 2.5vw;
        display: inline-flex;
        position: relative;
        background: rgba(255, 255, 255, 0.308);
        border: groove 1px rgba(135, 206, 250, 0.555);
        backdrop-filter: blur(2px);
        padding: 10px;
        padding-bottom: 25px;
        color: #fff;
        border-radius: 12px;
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.514);
    }
    .custom-file-profile-image {
        width: 55vw;
        border: solid 1px white;
        border-radius: 10px;
    }
    .custom-file-profile-image input {
    }
    .custom-file-profile-image {
        width: 55vw;
        
    }
    .custom-file-profile-image-button {
        width: 20vw;
        position: absolute;
        right: 12px;
        top: 10px;
        padding: 10px;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.432);
        backdrop-filter: blur(4px);
        outline: none;
        border: none;
    }
    .current-image-background {
        max-width: 300px;
        max-height: 300px;
        width: 300px;
        margin: 0 auto;
        text-align: center;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.452);
    }
    .current-image-background img {
        max-width: 300px;
        max-height: 300px;
        border-radius: 8px;
    }
</style>
<div class="user-background-image">
    <% if (currentUser.user_background_image) { %>
        <img src="/image/<%= currentUser.user_background_image %>" alt="<%= currentUser.fname %> <%= currentUser.lname %>'s Avatar">
        <%} else { %>
            <div class="user-background-color" style="width: 100vw; height: 100vh; position: fixed; top: 0; left: 0; background: <%= profile.favColor1 %>"></div>
            <% } %>
        </div>
        <%- include('partials/mainHeaderSiteMenu') %>
        <%- include('partials/mainHeaderPageMenu') %>
<h1 style="text-align: center; margin-top: 30px;">Update Your Profile</h1>
<div class="row">
<div class="update-profile col-12">

    <h3>Change Your Background Image</h3>
    <div class="user-profile-image-form">
        <form action="/upload-background-image?_method=PATCH" method="post" enctype="multipart/form-data">
            <div class="custom-file-background-image">
                <input type="file" name="user_background_image" id="userBackgroundImage">
                <label for="userProfileImage" class="custom-file-label-choose-background-image"></label>
            </div>
            <div class="custom-file-background-image-button">
                <div>
                    <button type="submit" class="custom-file-profile-image-button">Change</button>
                </div>
            </div>
        </form>
    </div>
    <div class="current-image-background">
        <% if (currentUser.user_background_image) { %>
            <img src="/image/<%= currentUser.user_background_image %>" alt="<%= currentUser.fname %> <%= currentUser.lname %>'s Avatar">
            <%} else { %>
                <div class="user-background-color" style="width: 100vw; height: 100vh; position: fixed; top: 0; left: 0; background: <%= profile.favColor1 %>"></div>
                <% } %>
            </div>
    <hr style="border-color: rgba(135, 206, 250, 0.623); margin-top: 40px; margin-bottom: 40px; width: 80%; margin-left: 10%;">
<form action="/users/update-profile?_method=PATCH" method="POST">

    <h3>About Me Section</h3>
    <textarea name="about" id="aboutMe" cols="50" rows="10"><%= currentUser.about %></textarea>
    
    <div class="s-m-container">

    <h3>Social Media Outlets</h3>
    
    <div class="s-m-outlet">
        <p>Github</p>
        <input type="url" name="social.github" value="<%= currentUser.social.github %>">
    </div>

    <div class="s-m-outlet">
    <p>LinkedIn</p>
    <input type="url" name="social.linkedin" value="<%= currentUser.social.linkedin %>">
    </div>
    <div class="s-m-outlet">
    <p>Facebook</p>
    <input type="url" name="social.facebook" value="<%= currentUser.social.facebook %>">
    </div>
    <div class="s-m-outlet">
    <p>Instagram</p>
    <input type="url" name="social.instagram" value="<%= currentUser.social.instagram %>">
    </div>
    <div class="s-m-outlet">
    <p>Twitter</p>
    <input type="url" name="social.twitter" value="<%= currentUser.social.twitter %>">
    </div>
    <div class="s-m-outlet">
        <p>Pinterest</p>
        <input type="url" name="social.pinterest" value="<%= currentUser.social.pinterest %>">
    </div>    
    </div>

    <div class="s-m-container">
        <h3>Mailing Information</h3>
        <div class="s-m-outlet">
            <p>Town</p>
            <input type="text" name="town" value="<%= currentUser.town %>">    
        </div>
        
        <div class="s-m-outlet">

            <p>State</p>
            <select name="state" value="<%= currentUser.state %>">
                <option value="CT">CT</option>
                <option value="FL">FL</option>
                <option value="MA">MA</option>
                <option value="IL">IL</option>
            </select>
        </div>

        <div class="s-m-outlet">
            <p>Zip Code</p>
            <input type="text" name="zip" value="<%= currentUser.zip %>">
        </div>
            
        <div class="s-m-outlet">

            <p>Country</p>
            <input type="text" name="country" value="<%= currentUser.country %>">
        </div>
        
        <div class="s-m-container">
            <h3>Contact Information</h3>

            <div class="s-m-outlet">
                <p>Phone Number</p>
                <input type="tel" name="phone1" id="phone1" value="<%= currentUser.phone1 %>">
                <select name="phoneType1" id="phoneType1" value="<%= currentUser.phoneType1 %>">
                    <option value="home">Home</option>
                    <option value="cell">Cell</option>
                    <option value="work">Work</option>
                    <option value="business">Business</option>
                </select>
            </div>
            <div class="s-m-outlet">
                <p>Secondary Number</p>
                <input type="tel" name="phone2" id="phone2" value="<%= currentUser.phone2 %>">
                <select name="phoneType2" id="phoneType2" value="<%= currentUser.phoneType2 %>">
                    <option value="home">Home</option>
                    <option value="cell">Cell</option>
                    <option value="work">Work</option>
                    <option value="business">Business</option>
                </select>
            </div>

        </div>

        <div class="s-m-container">
            <h3>Personal Details</h3>
            <div class="s-m-outlet">
                <p>Age</p>
                <input type="number" name="age" id="age" value="<%= currentUser.age %>">
            </div>
            <div class="s-m-outlet">
                <p>Gender</p>
                
                <input type="radio" id="male" name="gender" value="Male">
                <label for="Male">Male</label>
                <input style="margin-left: 10px;" type="radio" id="Female" name="gender" value="female">
                <label for="Female">Female</label><br>   
            </div>
        </div>
        <div class="s-m-outlet">

            <p style="width:auto; margin-right: 10px;">Relationship Status</p>
            <select name="relationshipStatus" value="<%= currentUser.relationshipStatus %>">
                <option value="single">Single</option>
                <option value="relationship">In a Relationship</option>
                <option value="married">Married</option>
                <option value="divorced">Divorced</option>
            </select>
        </div>
        <div class="s-m-outlet">
            <p>Favorite Colors</p>
            <input type="color" name="favColor1" id="favColor1" value="<%= currentUser.favColor1 %>"><input type="color" name="favColor2" id="favColor2" value="<%= currentUser.favColor2 %>"><input type="color" name="favColor3" id="favColor3" value="<%= currentUser.favColor3 %>">
        </div>
        <br>
    </div>

        <input type="submit" value="Update Profile" style="margin-top: 40px; display: block; width: 100%;">
    </form>
</div>
</div>