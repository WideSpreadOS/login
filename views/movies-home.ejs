<style>

    .movie-search {
        background: rgba(0, 0, 0, 0.3);
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding-bottom: 0;
        padding-top: 10px;
        width: 100%;
        margin-bottom: 30px;
        border-radius: 0;
    }
    .movie-search input {
        width: 100%;
        outline: none;
        border: none;
        padding: 5px;
        background: rgba(135, 206, 250, 0.5);
        backdrop-filter: blur(4px);
        color: #fff;
        box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.75);
    }
    .movie-search input::placeholder {
        color: #fff;
    }
    .movie-search button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        margin-bottom: 0;
        color: #fff;
        margin-top: 10px;
        border-top-left-radius: 8px;  
        border-top-right-radius: 8px;  
    }
    .user-movies h3 {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
    }
    .user-movies h5 {
        text-align: center;
    }
    .recommended-movies {
        display: inline-flex;
        overflow-x: scroll;
        max-height: 230px;
        height: 230px;
        width: 100%;
        max-width: 100%;
        margin-top: 5px;
        border-top: outset 1px lightskyblue;
        border-bottom: outset 1px lightskyblue;
        padding: 5px;
    }
    .movie {
        max-height: 225px;
        position: relative;
        width: 150px;
        min-width: 150px;
        max-width: 150px;
        margin-right: 10px;
    }
    .movie a {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    .movie-background {
        position: absolute;
        z-index: -30;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }
    .movie-background img {
        height: 222px;
        border-radius: 8px;
        width: 100%;
    }
    .movie-title {
        background: rgba(255, 255, 255, 0.3);
        border-bottom: groove 2px lightskyblue;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        width: 200px;
        padding: 10px;
    }
    .movie-title h5 {
        margin-bottom: 0;
        text-align: center;
    }
    .movie-rating {
        position: absolute;
        bottom: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(4px);
        width: 50px;
        border-top-left-radius: 8px;
        border-bottom-right-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-left: groove 2px lightskyblue;
    }
    .movie-rating p {
        color: #fff;
        text-align: center;
        padding: 10px;
        margin-bottom: 0;
    }
</style>



<div class="page-title">
    <h1>Movies</h1>
</div>

<%- include('partials/entertainment/zone-nav') %>


<div class="movie-search">
    <form action="/entertainment/movies/search" method="POST">
        <input type="text" name="movie" id="movie" placeholder="Search for movies...">
        <button type="submit">Search</button>
    </form>
</div>


<div class="spread-break">
    <hr>
</div>

<h5 style="text-align: center; padding: 10px; margin-top: 30px;">Recommended Movies</h5>


 <div class="recommended-movies">
    <% movies.forEach(function(movie) { %>
        <div class="movie">
                <a href="/entertainment/movies/<%= movie.link %>">
                <div class="movie-background">
                    <img src="<%= movie.poster %>" alt="">
                </div>
                <div class="movie-rating">
                    <p><%= movie.rated %></p>
                </div>
            </a>
        </div>
    <% }) %>
</div>

<div class="spread-break">
    <hr>
</div>

