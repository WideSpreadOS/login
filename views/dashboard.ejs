        <h2 style="text-align: center; margin-bottom: 20px;">Your Friends</h2>
    <div class="row">
        <div class="col-12 friends" style="margin-top: 70px;">
            <div class="outer_cont_container">
                <div class="cont_container">
                    <div class="cont_inner_container">
                <% profile.friends.forEach(function(friend){ %>
                        <div id="userCard_<%=friend.id %>" class="card">
                            <div class="face face1">
                                <div class="content">
                                    <img src="/images/system/default-user_1a1a1a.png" alt="Default User Image">
                                    <h3><%= friend.fname %> <%= friend.lname %></h3>
                                </div>
                            </div>
                            <div class="face face2">
                                <div class="content">
                                    <p><%= friend.about %></p>
                                        <a href="/users/<%= friend.id %>">Profile</a><a style="background: green;" href=""><i  class="fas fa-user-plus"></i></a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    </div>
                    </div>

            </div>
    </div>
    <% profile.friends.forEach(function(friend){ %>
        <div id="userCard_<%=friend.id %>" class="card">
            <h3><%= friend.posts %></h3>
        </div>
        <% }); %>
    <div class="row">
        <div class="col-6 user-posts">
            <div class="create-post">
                <h5>Create New Article</h5>
                <form action="/users/<%= id %>/article" method="POST">
                    <input type="text" name="articleTitle" placeholder="Article Title" id="articleTitle"></input>
                    <input type="text" name="articleHeader" id="articleHeader" placeholder="Article Header">
                    <textarea required name="articleBody" id="articleBody" class="form-control"></textarea>
                    <button class="btn btn-success" type="submit">Add Article</button>
                </form>
            </div>
            <div class="spread-h5">
                <h5>Your Articles</h5>
            </div>
            <div class="user-posts-container">
            <ul>
                <% article.forEach(function(article){ %>
                    <li style="list-style: none;">
                        <div class="outer-post-container" style="padding: 10px; margin: 5px; border-radius: 10px;">
                            <a href="/users/article/<%= article.id%>">&times;</a>
                            <div class="post-container">
                                <img src="/images/system/default-post_1a1a1a.png" alt="Post Icon" width="50px" height="50px">
                                <small class="text-muted"><%= article.createdAt.toLocaleDateString() %></small>
                                <div class="post">
                                    <h3><%= article.articleTitle %></h3>
                                    <h5><%= article.articleHeader %></h5>
                                    <p><%= article.articleBody %></p>
                                </div>
                            </div>  
                            
                        </div>
                    </li>
                <% }); %>
            </ul>
            </div>
        </div>
            <div class="col-6 user-posts">
                <div class="create-post">
                    <h5>Create New Post</h5>
                    <form action="/users/<%= id %>/post" method="POST">
                        <textarea required name="postBody" id="postBody" class="form-control"></textarea>
                        <button class="btn btn-success" type="submit">Add Post</button>
                    </form>
                </div>
                <div class="spread-h5">
                    <h5>Your Posts</h5>
                </div>
                <div class="user-posts-container">
                <ul>
                    <% posts.forEach(function(post){ %>
                        <li style="list-style: none;">
                            <div class="outer-post-container" style="padding: 10px; margin: 5px; border-radius: 10px;">
                                <a href="/users/post/<%= post.id%>">&times;</a>
                                <div class="post-container">
                                    <img src="/images/system/default-post_1a1a1a.png" alt="Post Icon" width="50px" height="50px">
                                    <small class="text-muted"><%= post.createdAt.toLocaleDateString() %></small>
                                    <div class="post">
                                        <p><%= post.postBody %></p>
                                    </div>
                                </div>  
                                
                            </div>
                        </li>
                    <% }); %>
                </ul>
                </div>

            </div>
    </div>
</div>

