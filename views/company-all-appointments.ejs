<style>
    .page-title {
        text-align: center;
        padding: 20px;
    }
    .appointments-container {
        padding: 10px;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 8px;
    }
    .appointment {
        background: rgba(0, 0, 0, 0.3);
        margin-bottom: 20px;
        border-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding: 10px;
        padding-bottom: 0;
    }
    .appointment h5 {
        padding: 10px;
    }
    .appointment p {
        padding: 5px;
        color: #fff;
    }
    .appointment input {
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        padding: 5px;
        margin-top: 10px;
    }
    .appointment select {
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        padding: 5px;
        margin-top: 10px;
    }
    .appointment button {
        margin-top: 20px;
            background: green;
            width: 80%;
            margin-left: 10%;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            border: groove 2px green;
            border-bottom: none;
            outline: none;
            color: #fff;
    }
</style>

<div class="page-title">
    <h1>Manage Appointments</h1>
    <h5><%= company.company_name %></h5>
</div>

<div class="appointments-container">
    <% appointments.forEach(function(appointment) { %>
        <div class="appointment">
            <h5><%= appointment.reason %></h5>
            <p><%= appointment.notes_before %></p>
            <div class="appointment-notes">
                <form action="/business/<%= company.id %>/manage/appointments/<%= appointment.id %>" method="post">
                    <input type="text" name="notes_after" placeholder="Add additional notes...">
                    <select name="appointment_given_to">
                        <% company.employees.forEach(function(employee) { %>
                            <option value="<%= employee.id %>"><%= employee.fname %> <%= employee.lname %></option>
                        <% }) %>
                    </select>
                    <button type="submit">Update</button>
                </form>
            </div>
        </div>
    <% }) %>
</div>