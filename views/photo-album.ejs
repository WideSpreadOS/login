<div class="user-photo-album-form">
    <h4>Add a New Photo Album</h4>
    <form action="/photo-album" method="POST">
        <div class="album-form-details">
            <p>Album Name</p>
            <input type="text" name="album_name" placeholder="Name of Album">
            <p>Album Description</p>
            <textarea name="album_description" placeholder="Enter an optional description here..."></textarea>
        </div>
        <div class="album-form-color">
            <p>Album Color:</p>
                    <div class="colors">
                        <div class="color red">
                            <input type="radio" name="album_color" value="#ff0000">Red
                        </div>
                        <div class="color dark-blue">
                            <input type="radio" name="album_color" value="#3300b2">Navy
                        </div>
                        <div class="color blue">
                            <input type="radio" name="album_color" value="#0000ff">Blue
                        </div>
                        <div class="color light-blue">
                            <input type="radio" name="album_color" value="#497df2">Cobalt
                        </div>
                        <div class="color teal">
                            <input type="radio" name="album_color" value="#49e9f2">Teal
                        </div>
                        <div class="color green">
                            <input type="radio" name="album_color" value="#3cb371">Green
                        </div>
                        <div class="color lime">
                            <input type="radio" name="album_color" value="#5ED928">Lime
                        </div>
                        <div class="color yellow">
                            <input type="radio" name="album_color" value="#ffde00">Yellow
                        </div>
                        <div class="color pink">
                            <input type="radio" name="album_color" value="#ee82ee">Pink
                        </div>
                        <div class="color peach">
                            <input type="radio" name="album_color" value="#ffceb2">Peach
                        </div>
                        <div class="color orange">
                            <input type="radio" name="album_color" value="#ffa500">Orange
                        </div>
                        <div class="color gold">
                            <input type="radio" name="album_color" value="#ffc900">Gold
                        </div>
                        <div class="color purple">
                            <input type="radio" name="album_color" value="#6a5acd">Purple
                        </div>
                        <div class="color dark-purple">
                            <input type="radio" name="album_color" value="#98009c">Dark Purple
                        </div>
                        <div class="color brick">
                            <input type="radio" name="album_color" value="#aa3720">Brick
                        </div>
                        <div class="color tan">
                            <input type="radio" name="album_color" value="#aa8620">Tan
                        </div>
                        <div class="color silver">
                            <input type="radio" name="album_color" value="#888">Silver
                        </div>
                        <div class="color grey">
                            <input type="radio" name="album_color" value="#444">Grey
                        </div>
                        <div class="color black">
                            <input type="radio" name="album_color" value="#111">Black
                        </div>
                    </div>
        </div>
        <p>Would you like this album public or private?</p>
        <div class="album-form-private">
            <div class="album-form-private-option">
                <input type="radio" id="privateFalse" name="private" value="false">
                <label for="privateFalse">Public</label><br>
            </div>
            <div class="album-form-private-option">
                <input type="radio" id="privateTrue" name="private" value="true">
                <label for="privateTrue">Private</label><br>
            </div>
        </div>
        <button type="submit">Add Photos</button>
    </form>
</div>
<div class="photo-albums-container">


        <% photoAlbums.forEach(function(album) { %>
    <div class="photo-album-container" style="background: <%= album.album_color %>;">
        <div class="album-details">
            <div class="album-name">
                <h4><%= album.album_name %></h4>
                    <% if (album.private === true) { %>
                        <p style="color: red;">Private</p>
                    <% } else { %>
                        <p>Public</p>
                    <% } %>
            </div>
        </div>
        <div class="photo-preview-slider">
            <div class="photo-preview-slide">
                <% if(album.photos == 0 ) { %>
                    <div class="photo-album-image-form">
        
                        <form action="/upload-to-album/<%= album.id %>" method="post" enctype="multipart/form-data">
                            <input type="text" name="albumOwner" id="albumOwner" style="display: none;" value="<%= thisUser.id %>">
                            <div class="custom-file-profile-image">
                                <label for="photos" class="custom-file-label-choose-profile-image">Upload an Image</label>
                                <input type="file" name="photos" id="photos">
                            </div>
                            
                            <div>
                                <button type="submit" class="custom-file-profile-image-button">Add</button>
                            </div>
                        </form>
                    </div>
                <% } else { %>
                    <div class="photos">
                    <% album.photos.forEach(function(photo) { %>

                            <div class="photo">
                                <img src="/image/<%= photo %>" alt="">
                            </div>
                            
                            <% }) %>
                        </div>
                    </div>
                </div>
                <% } %>
                <div class="album-bottom">

                    <div class="album-description">
                        <p><%= album.album_description %></p>
                    </div>
                    <div class="open-album">
                        <a href="/photo-album/<%= thisUser.id %>/<%= album._id %>">Open Album</a>
                    </div>
                </div>
            </div>
    <% }) %>
</div>

