<style>
        .page-title {
        padding: 20px;
        text-align: center;
    }

            .main-header-page-menu-container {
            width: 100%;
            padding-left: 0;
            padding-right: 0;
            box-shadow: inset 0 0 4px black;
            background: rgba(0, 0, 0, 0.3);
        }
        .main-header-page-menu-container p {
            margin: 0 auto;
            color: rgba(255, 255, 255, 0.76);
            text-align: center;
            font-size: 0.6rem;
            
        }
        .main-header-page-menu-inner a {
            border-top: groove 2px lightskyblue;
            border-bottom: groove 2px lightskyblue;
            text-align: center;
            background: rgba(255, 255, 255, 0.3);
        }
        #mainHeaderPageMenu {
            width: 100%;
            position: relative;

        }

        .main-header-page-menu-inner {
            display: inline-flex;
            max-width: 100%;
            min-width: 100%;
            overflow-x: scroll;
            padding: 10px;
            width: 100%;
        }
        .main-header-page-menu-inner a {
            position: relative;
            padding: 10px;
            width: 150px;
            margin-left: 5px;
            margin-right: 5px;
            margin-bottom: 10px;
            text-align: center;
        }

    .lookup-word {
        border-radius: 15px;
        background:rgba(255, 255, 255, 0.300);
    }
    .lookup-word input {
        width: 90%;
        margin-top: 10px;
        margin-bottom: 20px;
        margin-left: 5%;
        padding: 5px;
        border-radius: 8px;
        outline: none;
        border: none;
    }
    .lookup-word input:active {
        outline: none;
        border: none;

    }
    .lookup-word button {
        width: 90%;
        margin-left: 5%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        color: #fff;
    }
    .definition-container {
        padding: 10px;
        border-radius: 15px;

    }
    .definition-container h5 {
        color: lightskyblue;
        padding-top: 20px;
        padding-bottom: 20px;
    }
    .definition-container p {
        color: #fff;
    }
    .definition-container li {
        color: #fff;
    }
</style>



<%- include('partials/mainHeaderSiteMenu') %>
<%- include('partials/mainHeaderPageMenu') %>

<div class="page-title">
    <h1>Dictionary</h1>
</div>


<% if(returnedData) { %>
<div class="lookup-word">
    <form method="POST" action="/tools/dictionary">
        <input type="text" name="word" placeholder="Enter a word to lookup...">
        <button type="submit">Lookup</button>
    </form>
</div>
<div class="definition-container">

    <h5><%= returnedData.word %>:</h5>
    <ol>
        <% returnedData.results.forEach(function(definition) { %>
            <li>
                <p><em><%= definition.partOfSpeech %></em> - <%= definition.definition %></p>
                <p></p>
                
                
            </li>
            
            <% }) %>
        </ol>
    </div>

<% } else { %>
    <form method="POST" action="/tools/dictionary">
        <input type="text" name="word" placeholder="Enter a word to lookup...">
    </form>
<% } %>