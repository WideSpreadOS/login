<style>
            .spread-break hr {
    background: lightskyblue;
    box-shadow: 0 0 4px 2px rgba(255, 255, 255, 0.534);
    width: 80%;
    margin-left: 10%;
    border-radius: 50%;
    margin-top: 40px;
    margin-bottom: 30px;
    }
    h5 {
        text-align: center;
    }
    
    .show-search {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding: 10px;
        padding-bottom: 0;
        width: 100%;
        margin-bottom: 30px;
    }
    .show-search input {
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        outline: none;
        border: none;
        padding: 5px;
    }
    .show-search button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        margin-bottom: 0;
        color: #fff;
        margin-top: 10px;
        border-top-left-radius: 8px;  
        border-top-right-radius: 8px;  
    }
    .show-container {
        width: 200px;
        max-width: 200px;
        min-width: 200px;
        height: 300px;
        min-height: 300px;
        max-height: 300px;
        position: relative;
        border-radius: 8px;
        margin-right: 20px;
    }
    .show-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -25;
    }
    .show-image img {
        width: 100%;
        height: 100%;
        border-radius: 8px;
    }
    .show-title h5 {
        background: rgba(255, 255, 255, 0.3);
        border-bottom: groove 2px lightskyblue;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        z-index: 10;
        padding: 5px;
        text-align: center;
    }
    /* Stations */
    .your-stations {
        border-left: groove 1px lightskyblue;
        border-right: groove 1px lightskyblue;
        border-radius: 8px;
        min-height: 200px;
        background: rgba(0, 0, 0, 0.3);
    }
    .your-stations h5 {
        text-align: center;
        padding: 10px;
    }

    /* Shows */
    .your-shows {
        border-left: groove 1px lightskyblue;
        border-right: groove 1px lightskyblue;
        border-radius: 8px;
        min-height: 200px;
        background: rgba(0, 0, 0, 0.3);
;    }
    .your-shows h5 {
        text-align: center;
        padding: 10px;
    }

    /* Slider */
    
    .slider {
        width: 100%;
        height: auto;
        display: inline-flex;
        overflow-x: scroll;
        padding: 10px;
        
    }
    .slide-option {
        width: 200px;
        min-width: 200px;
        border-radius: 8px;
        margin-right: 20px;
        padding-left: 20px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        background:rgba(255, 255, 255, 0.3);
    }
</style>

<div class="page-title">
    <h1>TV Home</h1>
</div>

<div class="main-header-page-menu-container">
    <div id="mainHeaderPageMenu">
        <div class="main-header-page-menu-inner">
            <a href="/entertainment">Entertainment Home</a>
            <a href="/entertainment/movies">Movies</a>
            <a href="/entertainment/videos/<%= user.id %>">Videos</a>
            <a href="/entertainment/music">Music</a>
            <a href="/entertainment/podcast">Podcasts</a>
            <a href="/entertainment/audio-books">Audio Books</a>
            <a href="/entertainment/sports">Sports</a>

        </div>
    </div>
    <p>Scroll left & right for more options</p>
</div>


<div class="show-search">
    <form action="/entertainment/tv/search" method="POST">
        <input type="text" name="show" id="show" placeholder="Search for shows...">
        <button type="submit">Search</button>
    </form>
</div>


<div class="your-stations">
    <h5>Your Stations</h5>
    <div class="slider">
        <% returnedData.results.forEach(function(show) { %>
                    <a href="/entertainment/tv/<%= show.id %>">
                        <div class="show-container">
                            <div class="show-image">
                                <img width="200px" height="300px" src="https://image.tmdb.org/t/p/w500<%= show.poster_path %>" alt="">
                            </div>
                            <div class="show-title">
                                <h5> <%= show.name %></h5>
                            </div>
                            <p><%= show.id %></p>
                        </div>
                    </a>
        <% }) %>
    </div>
</div>

<div class="spread-break">
    <hr>
</div>

<div class="your-shows">
    <h5>Your Shows</h5>
    <div class="slider">
        <div class="slide-option"></div>
        <div class="slide-option"></div>
        <div class="slide-option"></div>
        <div class="slide-option"></div>
        <div class="slide-option"></div>
    </div>
</div>