<style>
        .spread-break hr {
    background: lightskyblue;
    box-shadow: 0 0 4px 2px rgba(255, 255, 255, 0.534);
    width: 80%;
    margin-left: 10%;
    border-radius: 50%;
    margin-top: 40px;
    margin-bottom: 30px;
    }
    h5 {
        text-align: center;
    }
    
    .show-search {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding: 10px;
        padding-bottom: 0;
        width: 100%;
        margin-bottom: 30px;
    }
    .show-search input {
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        outline: none;
        border: none;
        padding: 5px;
    }
    .show-search button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        margin-bottom: 0;
        color: #fff;
        margin-top: 10px;
        border-top-left-radius: 8px;  
        border-top-right-radius: 8px;  
    }
    .search-results {
        display: inline-flex;
        overflow-x: scroll;
        width: 90%;
        margin-left: 5%;
        margin-top: 30px;
    }
    .show-container {
        width: 200px;
        max-width: 200px;
        min-width: 200px;
        height: 300px;
        min-height: 300px;
        max-height: 300px;
        position: relative;
        border-radius: 8px;
        margin-right: 20px;
    }
    .show-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -25;
    }
    .show-image img {
        width: 100%;
        height: 100%;
        border-radius: 8px;
    }
    .show-title h5 {
        background: rgba(255, 255, 255, 0.3);
        border-bottom: groove 2px lightskyblue;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        z-index: 10;
        padding: 5px;
        text-align: center;
    }

</style>

<div class="show-search">
    <form action="/entertainment/tv/search" method="POST">
        <input type="text" name="show" id="show" placeholder="Search for shows...">
        <button type="submit">Search</button>
    </form>
</div>

<div class="search-results">
    <% returnedData.results.forEach(function(show) { %>
        <a href="/entertainment/tv/<%= show.id %>">
            <div class="show-container">
                <div class="show-image">
                    <img width="200px" height="300px" src="https://image.tmdb.org/t/p/w500<%= show.poster_path %>" alt="">
                </div>
                <div class="show-title">
                    <h5> <%= show.name %></h5>
                </div>
                <p><%= show.id %></p>
            </div>
        </a>
    <% }) %>
</div>