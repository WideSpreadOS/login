<style>
            .spread-break hr {
    background: lightskyblue;
    box-shadow: 0 0 4px 2px rgba(255, 255, 255, 0.534);
    width: 80%;
    margin-left: 10%;
    border-radius: 50%;
    margin-top: 40px;
    margin-bottom: 30px;
}
    .department {
        background:rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        margin-bottom: 20px;
    }
    .department h5 {
        text-align: center;
        padding: 10px;
    }
    .department p {
        color: #fff;
        text-align: center;
    }
    .manage-department {
        margin-top: 20px;
            background: green;
            width: 80%;
            margin-left: 10%;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            border: groove 2px green;
            border-bottom: none;
            color: #fff;
    }
    .manage-department p {
        text-align: center;
        margin-bottom: 0;
    }
    .manage-department a {
        color: #fff;
    }
    .add-department {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 8px;
    }
    .add-department h5 {
        text-align: center;
        padding: 10px;
    }
    .add-department input {
        width: 90%;
        margin-left: 5%;
        padding: 5px;
        border-radius: 8px;
        outline: none;
        border: none;
        margin-top: 10px;
    }
    .add-department select {
        margin-top: 10px;
        width: 90%;
        margin-left: 5%;
        padding: 5px;
        border-radius: 8px;
        outline: none;
        border: none;
    }
    .add-department button {
        margin-top: 20px;
            background: green;
            width: 80%;
            margin-left: 10%;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            border: groove 2px green;
            border-bottom: none;
            color: #fff;
    }
</style>

<div class="page-title">
    <h3><%= company.company_name %></h3>
    <h1>All Departments</h1>
</div>

<% departments.forEach(function(department) { %>
    <div class="department">
        <h5><%= department.name %></h5>
        <p>Manager: <%= department.manager.fname %> <%= department.manager.lname %></p>
        <div class="manage-department">
            <p><a href="/business/<%= company.id %>/manage/departments/<%= department.id %>">Manage Department</a></p>
        </div>
    </div>
<% }) %>

<div class="spread-break">
    <hr>
</div>

<div class="add-department">
    <h5>Add New Department</h5>
    <form action="/business/<%= company.id %>/manage/departments" method="post">
        <input type="text" name="name" placeholder="Department Name">
        <select name="manager">
            <% company.employees.forEach(function(employee) { %>
                <option value="<%= employee.id %>"><%= employee.fname %> <%= employee.lname %></option>
            <% }) %>
        </select>
        <button type="submit">Add Department</button>
    </form>
</div>