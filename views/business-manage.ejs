<style>
    .page-title {
        padding-top: 20px;
        text-align: center;
        width: 100%;
    }
    .main-header-page-menu-container {
        padding: 10px;
        background: rgba(255, 255, 255, 0.308);
        backdrop-filter: blur(2px);
        border-radius: 12px;
        border: groove 1px rgba(135, 206, 250, 0.555);
        
    }
    .main-header-page-menu-inner {
        padding: 10px;
    }
    .main-header-page-menu-inner a {
        display: inline-flex;
        padding: 10px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.733);
        transition: ease-in 0.4s;
        background: rgba(135, 206, 250, 0.315);
        backdrop-filter: blur(4px);
        border-radius: 8px;
        text-align: center;
    }
    .main-header-page-menu-inner a:hover {
        text-decoration: none;
        color: #fff;
        text-shadow: 0 0 3px lightskyblue;
        transition: ease-in 0.2s;
    }

    @media screen and (max-width: 500px) {
        .main-header-page-menu-container {
            width: 100%;
            padding-left: 0;
            padding-right: 0;
            box-shadow: inset 0 0 4px black;
        }
        .main-header-page-menu-container p {
            margin: 0 auto;
            color: rgba(255, 255, 255, 0.76);
            text-align: center;
            font-size: 0.6rem;
        }
        .main-header-page-menu-inner a {
            text-align: center;
        }
        
        #mainHeaderPageMenu {
            width: 100%;
            position: relative;

        }

        .main-header-page-menu-inner {
            display: inline-flex;
            max-width: 100%;
            min-width: 100%;
            overflow-x: scroll;
            padding: 10px;
            width: 100%;
        }
        .main-header-page-menu-inner a {
            position: relative;
            padding: 10px;
            width: 150px;
            margin-left: 5px;
            margin-right: 5px;
            margin-bottom: 10px;
            text-align: center;
        }
    }
</style>
<%- include('partials/mainHeaderSiteMenu') %>
<div class="page-title">
    <h1><%= currentPageTitle %></h1>
</div>
<div class="main-header-page-menu-container">
    <div id="mainHeaderPageMenuu">
        <div class="main-header-page-menu-inner">
            <a href="/business">Business Home</a>

        </div>
    </div>
    <p>Scroll left & right for more options</p>
</div>
<br>
<br>
<h1><%= company.company_name %></h1>

<div class="current-employess">
    <h2>Current Employees</h2>
    <% company.employees.forEach(function(employee) { %>
        <p>Employee: <%= employee.fname %></p>
        <% }) %>
</div>

<div class="job-applicants">

    <h2>Job Applicants</h2>
    <% company.job_applicants.forEach(function(applicant){ %>
        <div style="padding: 10px; margin: 5px; border-radius: 10px;">
            <div>
                <div class="job-applicant-card">
                    <a href="/business/<%= company._id %>/resume/applicant/<%= applicant.id %>">
                        <h3><%= applicant.resumeOwner.fname %> <%= applicant.resumeOwner.lname %></h3>
                        <p><%= applicant.resumeOwner.town %>, <%= applicant.resumeOwner.state %></p>
                        <p><%= applicant.resumeOwner.country %></p>
                        
                        </a>
                </div>
            </div>  
            
        </div>
    <% }); %>
</div>
<div class="nav-bar">
    <a href="/business/<%= company._id %>/add-employee">Add New Employee</a>
    <a href="/business/<%= company._id %>/inventory">Inventory</a>

</div>