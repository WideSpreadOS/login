<style>
    .page-title {
        padding-top: 20px;
        text-align: center;
        width: 100%;
    }
    .main-header-page-menu-container {
        padding: 10px;
        background: rgba(255, 255, 255, 0.308);
        backdrop-filter: blur(2px);
        border-radius: 12px;
        border: groove 1px rgba(135, 206, 250, 0.555);
        
    }
    .main-header-page-menu-inner {
        padding: 10px;
    }
    .main-header-page-menu-inner a {
        display: inline-flex;
        padding: 10px;
        text-decoration: none;
        color: rgba(255, 255, 255, 0.733);
        transition: ease-in 0.4s;
        background: rgba(135, 206, 250, 0.315);
        backdrop-filter: blur(4px);
        border-radius: 8px;
        text-align: center;
    }
    .main-header-page-menu-inner a:hover {
        text-decoration: none;
        color: #fff;
        text-shadow: 0 0 3px lightskyblue;
        transition: ease-in 0.2s;
    }

    @media screen and (max-width: 500px) {
        .page-title h1 {
            text-align: center;
        }
        .main-header-page-menu-container {
            width: 100%;
            padding-left: 0;
            padding-right: 0;
            box-shadow: inset 0 0 4px black;
        }
        .main-header-page-menu-container p {
            margin: 0 auto;
            color: rgba(255, 255, 255, 0.76);
            text-align: center;
            font-size: 0.6rem;
        }
        .main-header-page-menu-inner a {
            text-align: center;
        }
        
        #mainHeaderPageMenu {
            width: 100%;
            position: relative;

        }

        .main-header-page-menu-inner {
            display: inline-flex;
            max-width: 100%;
            min-width: 100%;
            overflow-x: scroll;
            padding: 10px;
            width: 100%;
        }
        .main-header-page-menu-inner a {
            position: relative;
            padding: 10px;
            width: 150px;
            margin-left: 5px;
            margin-right: 5px;
            margin-bottom: 10px;
            text-align: center;
        }
        .add-new-subpage {
            margin-top: 20px;
        }
        .add-new-subpage a {
            color: lightskyblue;
            margin-left: 10px;
            padding: 10px;
        }

        .current-employees {
            padding-top: 30px;
            margin-top: 10px;
            width: 100%;
        }
        .current-employees table {
            width: 100%;
        }
        .current-employees thead {
            background: lightskyblue;
        }
        .current-employees th {
            text-align: center;
        }
        .current-employees td {
            border-bottom: solid 1px lightskyblue;
            color: #fff;
        }
    }
</style>
<%- include('partials/mainHeaderSiteMenu') %>
<div class="page-title">
    <h1><%= currentPageTitle %></h1>
</div>
<div class="main-header-page-menu-container">
    <div id="mainHeaderPageMenuu">
        <div class="main-header-page-menu-inner">
            <a href="/business">Business Home</a>
            <a href="/business/<%= company._id %>/add-employee">Add New Employee</a>
            <a href="/business/<%= company._id %>/inventory">Inventory</a>
        </div>
    </div>
    <p>Scroll left & right for more options</p>
</div>
<br>
<br>
<h1><%= company.company_name %></h1>

<div class="add-new-subpage">
    <h4>Subpages</h4>
    <a href="/business/<%= company.id %>/add-subpage">Add a Subpage</a>
    
</div>


<div class="current-employees">
    <h2>Current Employees</h2>
    <table>
        <thead>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Link</th>
            <th></th>
        </thead>
        <tbody>
            <% employee.employees.forEach(function(employee) { %>
                <tr>
                    <td style="width: 20%; text-align: center;"><%= employee.lname %></td>
                    <td style="width: 20%; text-align: center;"><%= employee.fname %></td>
                        <td><a style="color: lightskyblue" href="/users/<%= employee.id %>"><%= employee.id %></a></td>

                    </tr>
                <% }) %>
                
            </tbody>
        </table>
</div>

<div class="current-employees">
    <h2>Job Applicants</h2>
    <table>
        <thead>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Resume</th>
            <th></th>
        </thead>
        <tbody>
            <% employee.job_applicants.forEach(function(applicant) { %>
                <tr>
                    <td style="width: 20%; text-align: center;"><%= applicant.lname %></td>
                    <td style="width: 20%; text-align: center;"><%= applicant.fname %></td>
                        <td><a style="color: lightskyblue" href="/users/<%= applicant.resumeOwner.id %>/resume"><%= applicant.resumeOwner.id %></a></td>

                    </tr>
                <% }) %>
                
            </tbody>
        </table>
</div>

