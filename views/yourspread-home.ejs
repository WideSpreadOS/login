<style>
    .movie-list {
        padding: 10px;
    }
    .movie-container {
        padding: 10px;
    }
    .movie-container p {
        padding: 10px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        text-align: center;
        box-shadow: inset 0 0 8px 5px rgba(255, 255, 255, 0.5);
    }
    .movie-container a {
        color: #fff;
    }
</style>
<h1 style="text-align: center;">YourSpread</h1>
<div class="movie-list">

    <% userInfo.movie_list.forEach(function(movie) { %>
        <div class="movie-container">
            <p><a href="/entertainment/movies/<%= movie.movie_link %>"><%= movie.movie_name %></a></p>
        </div>
        <% }) %>
</div>