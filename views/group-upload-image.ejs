<style>
    .image-form {
        width: 100%;
    }
    .image-form input {
        border: solid 1px lightskyblue;
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        padding: 5px;
    }
    .button button {
        box-shadow: inset 0 0 8px #fff;
      background: rgba(0, 128, 0, 0.3);
      border-bottom: groove 2px green;
      border-radius: 8px;
      border-left: solid 1px green;
      border-right: solid 1px green;
      margin-top: -2px;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
      width: 80%;
      margin-left: 10%;
      position: relative;
      z-index: 8;
      padding: 10px;
      color: #fff;
      transition: ease-in 0.3s;
      
    }
    .group-images {
        margin-top: 20px;
    }
    .group-image {
        width: 90%;
        max-width: 90%;
        margin-left: 5%;
        margin-bottom: 10px;
    }
    .group-image img {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }
</style>


<div class="image-upload">
    <h5>Add an Image to the Main Page</h5>
    <div class="image-form">
            
        <form action="/upload/groups/<%= group.id %>/upload-image" method="post" enctype="multipart/form-data">
            <input type="text" name="imageOwner" id="imageOwner" style="display: none;" value="<%= group.id %>">
                    
                        <input type="file" name="main_images" id="mainImages">
                        <div class="button">
                            <button type="submit" class="custom-file-profile-image-button">Add Image</button>
                        </div>                    
            </form>
        </div>
        <% if (group.main_images <= 0) { %>
            <div class="group-images">
                <% group.main_images.forEach(function(image) { %>
                    <div class="group-image">
                        <img src="/image/<%= image %>" alt="">
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <span></span>
        <% } %>
</div>