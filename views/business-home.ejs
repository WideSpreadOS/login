        <div class="main-header-page-menu-inner">
            <a href="/business">Business Home</a>
            <a href="/business/your-desk">Your Desk</a>
            <a href="/business/<%= company._id %>/manage">Manage Company</a>
            <a href="/business/<%= company._id %>/add-employee">Apply for a Job</a>
        </div>
