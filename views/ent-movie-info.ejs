<style>

    .spread-break hr {
    background: lightskyblue;
    box-shadow: 0 0 4px 2px rgba(255, 255, 255, 0.534);
    width: 80%;
    margin-left: 10%;
    border-radius: 50%;
    margin-top: 40px;
    margin-bottom: 30px;
    }
    h5 {
        text-align: center;
    }
    
    .movie-search {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding: 10px;
        padding-bottom: 0;
        width: 100%;
        margin-bottom: 30px;
    }
    .movie-search input {
        width: 90%;
        margin-left: 5%;
        border-radius: 8px;
        outline: none;
        border: none;
        padding: 5px;
    }
    .movie-search button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: groove 2px green;
        border-bottom: none;
        margin-bottom: 0;
        color: #fff;
        margin-top: 10px;
        border-top-left-radius: 8px;  
        border-top-right-radius: 8px;  
    }
    p {
        color: #fff;
    }
    .movie-title {
        margin-bottom: 20px;
    }
    .movie-title h1 {
        text-align: center;
    }
    .movie-poster {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: -50;
        background-image: url('<%= returnedData.Poster %>');
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        border-radius: 8px;
    }
    .movie-ratings {
        display: inline-flex;
        width: 100%;
    }
    .movie-ratings p {
    }
    .video-stream {
        width: 100%;
        max-width: 90vw;
        text-align: center;
        padding-top: 10px;
        border-radius: 8px;
        margin-bottom: 20px;
    }
    .video-stream iframe {
        border-radius: 8px;

    }
</style>
<div class="movie-search">
    <form action="/entertainment/movies/search" method="POST">
        <input type="text" name="movie" id="movie" placeholder="Search for movies...">
        <button type="submit">Search</button>
    </form>
</div>
<div class="movie-poster">
</div>
<div class="movie-container">
    <div class="movie-title">
        <h1><%= returnedData.Title %></h1>
    </div>
    <div class="video-stream">
        <iframe src="https://www.2embed.ru/embed/imdb/movie?id=<%= returnedData.imdbID %>" frameborder="0" allowfullscreen="true"></iframe>
    </div>
    <div class="movie-data">
        <div class="spread-break">
            <hr>
        </div>
        <div class="movie-plot">
            <h5>Plot</h5>
            <p><%= returnedData.Plot %></p>
        </div>
            <div class="spread-break">
                <hr>
            </div>
            <h5>Ratings</h5>
            <div class="movie-ratings">
                <% returnedData.Ratings.forEach(function(rating) { %>
                    <p><%= rating.Source %>: <%= rating.Value %></p>
                <% }) %>
            </div>
        <div class="spread-break">
            <hr>
        </div>
        <div class="movie-crew">
            <h5>Cast & Crew</h5>
            <p>Director: <%= returnedData.Director %></p>
            <p>Writer: <%= returnedData.Writer %></p>
            <p>Cast: <%= returnedData.Actors %></p>
        </div>
    </div>
    <div class="spread-break">
        <hr>
    </div>
    <div class="movie-stats">
        <h5>More Info</h5>
        <p><%= returnedData.Year %></p>
        <p>Rated: <%= returnedData.Rated %></p>
        <p>Released: <%= returnedData.Released %></p>
        <p>Runtime: <%= returnedData.Runtime %></p>
        <p>Genre: <%= returnedData.Genre %></p>
        <p>Box Office: <%= returnedData.BoxOffice %></p>
        <p>Production Company: <%= returnedData.Production %></p>
        <p>Awards: <%= returnedData.Awards %></p>
        <p>Language: <%= returnedData.Language %></p>
    </div>
</div>

