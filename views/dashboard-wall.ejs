<style>
    .create-spread-post {
        margin-bottom: 30px;
    }
    .create-spread-post h5 {
        text-align: center;
    }
    .create-spread-post textarea {
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.295);
        backdrop-filter: blur(2px);
        color: #fff;
    }
    .create-spread-post textarea:active {
        border-radius: 10px;
        box-shadow: inset 0 0 10px lightskyblue;
        color: #fff;
    }
    .socialspread-posts {
    }
    .socialspread-posts h5 {
        text-align: center;
    }
 
    .post-body p {
        padding: 0;
        padding-top: 20px;
        font-size: 1.1rem;
        color: #fff;
    }
    .post-actions {
        text-align: center;        
    }
    .post-actions form {
        width: 15%;
    }
    .post-actions a {
       font-size: 1rem;
    }
    .comment-on-post {
        padding: 0;
        width: 95%;
        margin-left: 2.5%;
        margin-top: 20px;
    }
    .comment-avatar {
        border-radius: 50%;
        width: 50px;
        height: 50px;
        overflow: hidden;
    }
    .comment h5 {
        border-bottom: solid 1px lightskyblue;
        padding-bottom: 10px;
    }
    .comment p {
        color: #fff;
    }
</style>
<%- include('partials/mainHeaderSiteMenu') %>
<%- include('partials/mainHeaderPageMenu') %>
<h2 style="text-align: center; margin-bottom: 20px; margin-top: 30px;">SocialSpread</h2>
<hr style="border-color: rgba(135, 206, 250, 0.623); margin-top: 40px; margin-bottom: 40px; width: 80%; margin-left: 10%;">



<div class="create-spread-post">
    <h5>Spread Something</h5>
    <form action="/users/<%= id %>/post" method="POST">
        <textarea required name="postBody" id="postBody" class="form-control"></textarea>
        <button class="btn-block block-button spread-it" type="submit">Spread It</button>
    </form>
</div>

<div class="socialspread-posts">

<h5>Recent Spreads</h5>
<% data.forEach(function(post){ %>
    <div class="outer-post-container" style="box-shadow: 0 0 10px <%= post.author.favColor1 %>">
                <div class="ss-post">
  
                    <div class="user-avatar"style="box-shadow: 0 0 10px <%= post.author.favColor1 %>; margin-top: 10px;">
                        <% if (post.author.user_avatar) { %>
                            <p><%=profileImages.imageOwner %></p>
                            <img src="/image/<%= post.author.user_avatar %>" alt="'s Avatar">
                            <%} else { %>
                                <img src="/images/system/default-user_1a1a1a.png" alt="Default Avatar" width="260px" >
                                <% } %>
                </div>
                </div>
                            <h4 style="color: <%= post.author.favColor1 %>;"><%= post.author.fname %> <%= post.author.lname%></h4>
                            <div class="post-timestamp">
                                
                                <small class="post-span"><%= post.createdAt.toLocaleDateString() %> - <%= post.createdAt.toLocaleTimeString() %></small>
                            </div>
                    <div class="post-body">
                        <p><%= post.postBody %></p>
                    </div>

                    <div class="post-actions">
                        <span class="like-button">
                            <form action="/dashboard/wall/post/<%= post.id %>/like?_method=PATCH" method="post">
                                <input type="text" name="likedBy" value="<%= id %>" hidden="true">
                                <button type="submit"><i class="far fa-heart"></i></button>
                                <span><%= post.likes %></span>
                            </form>
                                <span><% if(id == post.author.id){ %>
                                <a style="color: #fff;" href="/users/post/edit/<%= post.id%>"><small>Edit Post</small></a>
                                <a href="/users/post/<%= post.id%>" style="text-shadow: 0 0 1px #fff;">Delete Post</a>
                                <% } else { %>
                                <span></span>
                                <% } %></span>
                        </span>
                    </div>
                          

                    <div class="comment-container">
                    <div class="comment-on-post">
                        <h4>Leave a comment</h4>
                        <form action="/users/<%= post.author.id %>/post/<%= post.id %>/comment" method="POST">
                            <textarea required name="commentBody" id="commentBody" class="form-control" style="color: #fff"></textarea>
                            <button class="btn-block block-button spread-it" type="submit">Spread More</button>
                            <input type="text" name="fromPost" value="<%= post.id %>" hidden="true">
                        </form>

                    </div>
                        <div class="comments">
                
                            <% post.comments.forEach(function(comment){ %>
                                <div class="comment" style="box-shadow: 0 0 5px <%= comment.author.favColor1 %>;">
                                    <div class="comment-time">
                                        <p><small><%= comment.createdAt.toLocaleDateString() %> - <%= comment.createdAt.toLocaleTimeString() %></small></p>
                                    </div>
                                        <div class="comment-avatar" style="box-shadow: 0 0 5px <%= comment.author.favColor1 %>;">
                                            <% if (comment.author.user_avatar) { %>
                                                <img src="/image/<%= comment.author.user_avatar %>" alt="'s Avatar" width="60px">
                                                <%} else { %>
                                                <img src="/images/system/default-user_1a1a1a.png" alt="Default Avatar" width="60px" >
                                                <% } %>
                                        </div>
                                    <h5 style="color: <%= comment.author.favColor1 %>;"><%= comment.author.fname %> <%= comment.author.lname %></h5>
                                    
                                    <p><%= comment.commentBody %></p>
                                    <div class="comment-actions">
                                        <span class="like-button">
                                            <form action="/<%= comment.id %>/like?_method=PATCH" method="post">
                                                <input type="text" name="likedBy" value="<%= id %>" hidden="true">
                                                <button type="submit"><i class="far fa-heart"></i></button>
                                                <span><%= comment.likes %></span>
                                            </form>
                                        </span>
                                    
                                    </div>
                                </div>
                                <% }); %>
                                
                            </div>
                        </div>
                </div>

<% }); %>
</div>