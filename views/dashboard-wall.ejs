<%- include('partials/mainHeaderPageMenu') %>


<div class="page-title">
    <h2>SocialSpread</h2>
</div>


<div class="create-spread-post">
    <h5 style="text-align: center;">Spread Something</h5>
    <form action="/users/<%= id %>/post" method="POST">
        <textarea required name="postBody" id="postBody" class="form-control"></textarea>
        <button type="submit">Spread It</button>
    </form>
</div>



<div class="socialspread-posts">

<h5>Recent Spreads</h5>


<% data.forEach(function(post){ %>
    <div class="post-container">
        <div class="post">
            <div class="post-author-data">

                <% if (post.container_image) { %>
                    <div class="image-share">
                        <img src="<%= post.container_image %> alt="">
                    </div>

                <% } else { %>
                    <div class="author-image">
                        <% if (post.author.user_avatar) { %>
                            <img src="/image/<%= post.author.user_avatar %>" alt="'s Avatar">
                        <%} else { %>
                            <img src="/images/system/default-user_1a1a1a.png" alt="Default Avatar" >
                        <% } %>
                    </div>
                <% } %>

                        <div class="author-info">
                    <a href="/users/<%= post.author.id %>">
                        <h5><%= post.author.fname %> <%= post.author.lname %></h5>
                    </a>
                    </div>
                </div>
                <div class="post-data">
                    <div class="post-header">
                        <div class="edit-post">
                            <span>
                                <% if(id == post.author.id){ %>
                                    <a style="color: #fff;" href="/users/post/edit/<%= post.id%>"><small><i class="far fa-edit" style="color: yellow"></i></small></a>
                                <% } else { %>
                                    <span></span>
                                <% } %>
                            </span>
                            <span>
                                <% if(id == post.author.id){ %>
                                    <a href="/users/post/<%= post.id%>" style="text-shadow: 0 0 1px #fff;"><small><i class="far fa-trash-alt" style="color: red"></i></small></a>
                                <% } else { %>
                                    <span></span>
                                <% } %>
                            </span>
                        </div>
                        <div class="post-time">
                            <p><small><%= post.createdAt.toLocaleTimeString() %> <%= post.createdAt.toLocaleDateString() %></small></p>
                        </div>
                    </div>
                    <div class="post-body">
                        <p><%= post.postBody %></p>
                    </div>
                    <div class="post-actions">
                        <span class="like-button">
                            <form action="/dashboard/wall/post/<%= post.id %>/like?_method=PATCH" method="post">
                                <input type="text" name="likedBy" value="<%= id %>" hidden="true">
                                <button type="submit"><i class="far fa-heart"></i></button>
                                <span><%= post.likes %></span>
                            </form>
                        </span>
                        <div class="like-button">
                            <span class="like-button">
                                <form action="/dashboard/wall/post/<%= post.id %>/save?_method=PATCH" method="post">
                                    <input type="text" name="saved_posts" value="<%= post.id %>" hidden="true">
                                    <button type="submit"><i class="far fa-bookmark"></i></button>
                                </form>
                            </span>
                        </div>
                </div>
                </div>
        </div>
        <div class="comments-container">
            <h6>Comments</h6>
            <% post.comments.forEach(function(comment) { %>
                <div class="comment">
                    <div class="comment-author-image">
                        <a href="/users/<%= comment.author.id %>">
                            <img src="/image/<%= comment.author.user_avatar %>" alt="'s Avatar">
                        </a>
                    </div>
                    
                    <div class="comment-data">
                        <a href="/users/<%= comment.author.id %>">
                            <div class="comment-author">
                                <p><%= comment.author.fname %> <%= comment.author.lname %></p>
                            </div>
                        </a>
                        <div class="comment-header">
                            <div class="edit-comment">
                                <span>
                                    <% if(id == comment.author.id){ %>
                                        <a style="color: #fff;" href="/users/comment/<%= comment.id%>/edit"><small><i class="far fa-edit" style="color: yellow"></i></small></a>
                                    <% } else { %>
                                        <span></span>
                                    <% } %>
                                </span>
                                <span>
                                    <% if(id == comment.author.id){ %>
                                        <span class="like-button">
                                            <form action="/users/comment/<%= comment.id%>/delete?_method=DELETE" method="post">
                                                <input type="text" name="comment" value="<%= comment.id %>" hidden="true">
                                                <button type="submit"><i class="far fa-trash-alt" style="color: red"></i></button>
                                            </form>
                                        </span>
                                    <% } else { %>
                                        <span></span>
                                    <% } %>
                                </span>
                            </div>
                            <div class="comment-time">
                                <p><small><%= comment.createdAt.toLocaleTimeString() %> <%= comment.createdAt.toLocaleDateString() %></small></p>
                            </div>
                        </div>
                        <div class="comment-body">
                            <p><%= comment.commentBody %></p>
                        </div>
                        <span class="like-button">
                            <form action="/<%= comment.id %>/like?_method=PATCH" method="post">
                                <input type="text" name="likedBy" value="<%= id %>" hidden="true">
                                <button type="submit"><i class="far fa-heart"></i></button>
                                <span class="likes-count"><%= comment.likes %></span>
                            </form>
                        </span>
                    </div>

                </div>
            <% }) %>
        </div>
    </div>
        <div class="spread-comment">
            <form action="/users/<%= post.author.id %>/post/<%= post.id %>/comment" method="POST">
                <textarea required name="commentBody" id="commentBody" style="color: #fff" placeholder="Add a comment..."></textarea>
                <button type="submit">Comment</button>
                <input type="text" name="fromPost" value="<%= post.id %>" hidden="true">
            </form>
        </div>
<% }) %>

</div>
 

 