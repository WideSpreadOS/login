<!-- Main SpreadMenu -->

<div class="main-spread-menu-container">
  <%- include('./partials/mainSpreadMenu') %>
</div>



<!-- Login/Register Forms -->

<div class="both-forms">

  <!-- Login Form -->

  <div class="login-form">   
    <%- include('./partials/messages') %>
    <form action="/users/login" method="POST">
      <div class="glass" style="border-top-right-radius: 8px; border-bottom-right-radius: 8px;">
        <h5 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h5>
        <div class="input-group">
          <label for="email" style="color: #fff">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="input-control login-input"
            placeholder="Enter your email"
            />
        </div>
        <div class="form-group">
          <label style="color: #fff" for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            />
        </div>
      </div>
      <button type="submit" style="border-radius: 0; border-top-right-radius: 8px; border-bottom-right-radius: 8px;">Login</button>
    </form>
  </div>


  <!-- WideSpread Logo -->

  <div class="widespread-logo">
    <img src="/images/system/widespread_logo_1d.png" alt="WideSpread Logo">
  </div>


  <!-- Register Form -->

  <div class="register-form">
    <%- include ('./partials/messages') %>
    <form action="/users/register" method="POST">
      <div class="glass" style="border-top-left-radius: 8px; border-bottom-left-radius: 8px; border-left: none;">
      <h5><i class="fas fa-user-plus"></i> Register</h5>
        <div class="input-group">
            <label for="name" style="color: #fff"> First Name</label>
            <input
            type="name"
            id="fname"
            name="fname"
            class="input-control login-input"
            placeholder="Enter First Name"
            value="<%= typeof name != 'undefined' ? fname : '' %>"
            />
        </div>
        <div class="input-group">
          <div class="input-data">
            <label for="name" style="color: #fff"> Last Name</label>
          </div>
            <input
            type="name"
            id="lname"
            name="lname"
            class="input-control login-input"
            placeholder="Enter Last Name"
            value="<%= typeof name != 'undefined' ? lname : '' %>"
            />
        </div>
        <div class="input-group">
          <div class="input-data">
            <label for="email" style="color: #fff">Email</label>
            <input
            type="email"
            id="email"
            name="email"
            class="input-control login-input"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
        </div>
        <div class="input-group">
          <div class="input-data">
            <label for="password" style="color: #fff">Password</label>
            <input
            type="password"
            id="password"
            name="password"
            class="input-control login-input"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
        </div>
        <div class="input-group">
          <div class="input-data">
            <label for="password2" style="color: #fff">Confirm Password</label>
            <input
            type="password"
            id="password2"
            name="password2"
            class="input-control login-input"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
        </div>
      </div>
      <button type="submit" style="border-radius: 0; border-top-left-radius: 8px; border-bottom-left-radius: 8px; margin-left: 50%; border-right: none;">Register</button>
    </form>
  </div>

</div>