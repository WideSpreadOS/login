<div class="welcome-background-video">
  <video autoplay loop>
    <source src="videos/earth-particles_1a1a1a.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</div>
<div class="row mt-5" style="padding-top: 70px;">
    <div class="col-md-6 m-auto">
      <div class="nav-bar-outer" style="opacity: 1.0;">
        <div class="nav-bar nav-bar-ws" style="padding: 15px; padding-left: 0;">
          <div class="login-background">
            <div class="login-background-image">
            </div>
            </div>
      <div class="card card-body">

        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <% include('./partials/messages') %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control login-input"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control login-input"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block login-button">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a class="spreadlink" href="/users/register">Register</a>
        </p>
      </div>
        </div>
      </div>
    </div>
  </div>