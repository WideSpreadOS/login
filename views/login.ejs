  <div class="row mt-5">
    <div class="create-account">
        <div class="text-center">
            <div class="create-account-btns">
            
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <% include('./partials/messages') %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email" style="color: #fff">Email</label>
            <input
            type="email"
            id="email"
            name="email"
            class="form-control login-input"
            placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label style="color: #fff" for="password">Password</label>
            <input
            type="password"
            id="password"
            name="password"
            class="form-control login-input"
            placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block login-button">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a class="spreadlink" style="color: lightskyblue" href="/users/register">Register</a>
        </p>
      </div>
    </div>
      </div>
    </div>
  </div>