<style>
  input {
    color: #fff;
  }
  input::placeholder {
    color: #fff;
  }
  @media screen and (min-width: 1200px) {
        body {
          background: #000;
        }
        .main-spread-menu-container {
            box-shadow: 0 6px 6px 3px rgba(0, 0, 0, 0.5);
        }
        .both-forms {
          width: 85vw;
          display: inline-flex;
          overflow: hidden;
          position: fixed;
          top: 85px;
          padding-bottom: 85px;
          right: 0;
        }
        .both-forms button {
          margin-top: 40px;
          background: rgba(0, 255, 0, 0.3);
          backdrop-filter: blur(4px);
          font-size: 1.5rem;
          width: 50%;
          margin-left: 0;
          box-shadow: 0 6px 6px 3px rgba(0, 0, 0, 0.5);
          border: solid 1px green;
          border-radius: 8px;
          padding: 10px;

        }
        .glass {
          background: rgba(135, 206, 250, 0.3);
          backdrop-filter: blur(2px);
          padding-bottom: 20px;
          border-top: groove 2px lightskyblue;
          border-bottom: groove 2px lightskyblue;
          box-shadow: 0 6px 6px 3px rgba(0, 0, 0, 0.5);
        }
        .login-form {
          width: 30%;
          position: relative;
        }
        .login-form form {
          position: absolute;
          top: 30px;
          left: 0;
          width: 100%;
        }
        .login-form label {
          font-size: 0.7rem;
          color: #fff;
          text-align: center;
          width: 100%;
          margin-top: 10px;
        }
        .login-form input {
          right: 10px;
          padding: 5px;
          background: rgba(135, 206, 250, 0.3);
          border: none;
          border-top: groove 2px #fff;
          border-bottom: groove 2px #fff;
          outline: none;
          margin-top: 5px;
          border-radius: 0;
          width: 100%;
        }
        /* WideSpread Logo */
        .widespread-logo {
          width: 40%;
          min-width: 40%;
          margin-left: 5%;
          text-align: center;
          padding-top: 150px;
        }
        .widespread-logo img {
          width: 100%;
          max-width: 100%;
          min-width: 100%;
          filter: drop-shadow( 0 0 15px  #000); 
        }

        .register-form {
          margin-left: 5%;
          width: 30%;
          position: relative;  
        }
        .register-form form {
          position: absolute;
          top: 30px;
          left: 0;
          width: 100%;
        }
        .input-data {
          width: 100%;
        }
        .register-form label {
          font-size: 0.7rem;
          color: #fff;
          text-align: center;
          width: 100%;
          margin-top: 10px;
        }
        .register-form input {
          right: 10px;
          padding: 5px;
          background: rgba(135, 206, 250, 0.3);
          border: none;
          border-top: groove 2px #fff;
          border-bottom: groove 2px #fff;
          outline: none;
          margin-top: 5px;
          border-radius: 0;
          width: 100%;
        }
    }


@media screen and (max-width: 1199px) {
        .main-spread-menu {
            display: none;
        }
    }


@media screen and (max-width: 500px) {

    }

</style>


