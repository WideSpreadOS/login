    <div class="search">
        <div class="search-input">
            <form action="/socialspread/photospread/pixabay/search" method="post">
                <input type="text" name="search" placeholder="Search for images...">
            </div>
            <button type="submit">Search</button>
        </form>
    </div>


    <div class="image-container">
        <h5>Newest Images</h5>
        <% returnedData.hits.forEach(function(data) { %>
            <div class="image">
                <img src="<%= data.largeImageURL %>" alt="">
                <div class="image-location">
                    <div class="artist-name">
                        <div class="artist-link">
                            <p><a href="<%= data.pageURL %>"><%= data.user %></a></p>
                        </div>
                        <% if (data.tags) { %>
                            <h6><%= data.tags %></h6>
                        <% } else { %>
                            <span style="display: none;"></span>
                        <% } %>
                    </div>
                    <div class="spread-menu">
                        <div class="menu">
        <input type="checkbox" id="<%= data.id %>" class="toggle"/>
        <label id="show-menu" for="<%= data.id %>">
          <div class="btn">
            <i class="fas fa-project-diagram toggleBtn menuBtn"></i>
            <i class="material-icons md-36 toggleBtn closeBtn">close</i>
          </div>
          <div class="btn" title="Make your background image - Dashboard & Public Profile">
              <form action="/users/change-main-background-image-url?_method=PATCH" method="post">
                <input type="text" name="bgImage" value="<%= data.largeImageURL %>" hidden>
                <button type="submit"><i class="far fa-image"></i></button>
            </form>
          </div>
          <div class="btn" title="Like this">
            <i class="far fa-heart"></i>
          </div>
          <div class="btn" title="Share this">
            <i class="fas fa-share-alt"></i>
          </div>
          <div class="btn" title="Comment on this">
            <i class="far fa-comment-alt"></i>
          </div>
          <div class="btn" title="Save this">
            <i class="far fa-save"></i>
          </div>
          <div class="btn" title="Add this">
            <i class="fas fa-plus"></i>
          </div>
          <div class="btn" title="Find more near this location">
            <i class="fas fa-search-location"></i>
          </div>
          <div class="btn" title="More Information">
            <i class="fas fa-info"></i>
          </div>
        </label>
      </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>