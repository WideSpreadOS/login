<style>
    .exercise {
        background: rgba(0, 0, 0, 0.3);
        margin-bottom: 20px;
        border-radius: 8px;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        padding: 10px;
    }
    .exercise h5{
        text-align: center;
    }
    .exercise p {
        font-size: 0.7rem;
        text-align: center;
    }
    .exercise table {
        width: 100%;
    }
    .exercise th {
        background: lightskyblue;
        color: #fff;
        text-align: center;
        padding: 5px;
    }
    .exercise th:first-of-type {
        border-top-left-radius: 8px;
    }
    .exercise th:last-of-type {
        border-top-right-radius: 8px;
    }
    .exercise td {
        text-align: center;
        padding: 5px;
        color: #fff;
    }
  
</style>

<h1>Your Workout History</h1>

<div class="exercises">
    <% exercises.forEach(function(exercise) { %>
        <div class="exercise">
            <h5><%= exercise.exercise %></h5>
            <p><%= exercise.date.toLocaleDateString() %></p>
            <table>
                <tr>
                    <th>Set 1</th>
                    <th>Set 2</th>
                    <th>Set 3</th>
                    <th>Set 4</th>
                    <th>Set 5</th>
                </tr>
                <tr>
                    <td><%= exercise.set1.weight %>lbs.</td>
                    <td><%= exercise.set2.weight %>lbs.</td>
                    <td><%= exercise.set3.weight %>lbs.</td>
                    <td><%= exercise.set4.weight %>lbs.</td>
                    <td><%= exercise.set5.weight %>lbs.</td>
                </tr>
                <tr>
                    <td>x<%= exercise.set1.reps %></td>
                    <td>x<%= exercise.set2.reps %></td>
                    <td>x<%= exercise.set3.reps %></td>
                    <td>x<%= exercise.set4.reps %></td>
                    <td>x<%= exercise.set5.reps %></td>
                </tr>
            </table>
        </div>
    <% }) %>
</div>